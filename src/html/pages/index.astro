---
import FrontLayout from '../layouts/front/front-layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../utils/path.js'
---

<FrontLayout currentPath="test" title="Test" description="Test lorem ipsum.">
  <!-- Hero Section -->
  <section class="text-center pt-4 pb-5">
    <h1 class="display-5 fw-semibold">Hey there!</h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead mb-4">Smart, simple themes to get your HOA online in style.</p>
      <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
        <a href={getPathPrefix('/docs')} class="btn btn-lg btn-primary rounded-pill px-4"
          >Get Started</a
        >
        <a href="#" class="btn btn-lg btn-outline-primary rounded-pill px-4">Contact Us</a>
      </div>
    </div>
  </section>
  <!-- Themes Section -->
  <section class="pb-5">
    <h1 class="display-6 text-center fw-semibold">Themes</h1>
    <p class="lead text-center mb-4">
      Choose from professionally designed layouts tailored for homeowner associations.
    </p>
    <div class="row g-4">
      <div class="col-sm-6 col-md-4">
        <div class="card card-lift border h-100 p-0">
          <a href={getPathPrefix('/theme/1')}>
            <img
              src={getAssetPrefix('/assets/img/theme-images/hero-1.jpg')}
              class="card-img-top"
              alt="Theme Image"
            />
          </a>
          <div class="card-body p-3">
            <h5 class="card-title">
              <a href={getPathPrefix('/theme/1')} class="text-decoration-none">Theme 1</a>
            </h5>
            <p class="mb-0">
              Clean layout with timeless structure built for clear community communication.
            </p>
          </div>
        </div>
      </div>
      <div class="col-sm-6 col-md-4">
        <div class="card card-lift border h-100 p-0">
          <a href={getPathPrefix('/theme/2')}>
            <img
              src={getAssetPrefix('/assets/img/theme-images/hero-2.jpg')}
              class="card-img-top"
              alt="Theme Image"
            />
          </a>
          <div class="card-body p-3">
            <h5 class="card-title">
              <a href={getPathPrefix('/theme/2')} class="text-decoration-none">Theme 2</a>
            </h5>
            <p class="mb-0">
              Welcoming design with soft aesthetics, ideal for community-focused websites.
            </p>
          </div>
        </div>
      </div>
      <div class="col-sm-6 col-md-4">
        <div class="card card-lift border h-100 p-0">
          <a href={getPathPrefix('/theme/3')}>
            <img
              src={getAssetPrefix('/assets/img/theme-images/hero-3.jpg')}
              class="card-img-top"
              alt="Theme Image"
            />
          </a>
          <div class="card-body p-3">
            <h5 class="card-title">
              <a href={getPathPrefix('/theme/3')} class="text-decoration-none">Theme 3</a>
            </h5>
            <p class="mb-0">
              Sleek design with bold visuals and streamlined resident-friendly navigation.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</FrontLayout>
