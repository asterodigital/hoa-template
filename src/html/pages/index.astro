---
import FrontLayout from '../layouts/front/front-layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../utils/path.js'
---

<FrontLayout
  currentPath="home"
  title="HOA Website Templates"
  description="Professional, responsive HOA website templates for homeowner associations. 3 unique designs with 25+ HTML pages, modern features, and clean code."
>
  <!-- Hero Section -->
  <section
    class="position-relative text-center py-5"
    style={`background-image: url('${getAssetPrefix('/assets/img/theme-images/hero-2.jpg')}'); background-size: cover; background-position: center; min-height: 80vh; display: flex; align-items: center;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-75"></div>

    <div class="container position-relative">
      <div class="row justify-content-center">
        <div class="col-lg-10">
          <div class="mb-4" data-aos="fade-up" data-aos-duration="1000">
            <span class="badge bg-light text-dark px-3 py-2 rounded-pill fs-6 mb-3">
              <i class="ri-star-line me-2"></i>Premium HOA Templates
            </span>
          </div>
          <h1
            class="display-3 fw-bold text-white mb-4"
            data-aos="fade-up"
            data-aos-delay="200"
            data-aos-duration="1600"
          >
            Professional HOA Website Templates
          </h1>
          <p
            class="lead mb-5 fs-4"
            style="color: rgba(255, 255, 255, 0.9);"
            data-aos="fade-up"
            data-aos-delay="400"
            data-aos-duration="1600"
          >
            Beautiful, responsive templates designed specifically for homeowner associations. Get 3
            unique demo themes with modern designs and clean, customizable code.
          </p>

          <!-- Feature badges -->
          <div
            class="row g-3 mb-5 justify-content-center"
            data-aos="fade-up"
            data-aos-delay="600"
            data-aos-duration="1600"
          >
            <div class="col-6 col-md-3">
              <div class="bg-white bg-opacity-15 rounded-3 p-3">
                <i class="ri-layout-3-line fs-2 mb-2 text-warning"></i>
                <div class="fw-bold">3 Themes</div>
                <small class="opacity-75">Unique Designs</small>
              </div>
            </div>
            <div class="col-6 col-md-3">
              <div class="bg-white bg-opacity-15 rounded-3 p-3">
                <i class="ri-pages-line fs-2 mb-2 text-warning"></i>
                <div class="fw-bold">25+ Pages</div>
                <small class="opacity-75">Complete Package</small>
              </div>
            </div>
            <div class="col-6 col-md-3">
              <div class="bg-white bg-opacity-15 rounded-3 p-3">
                <i class="ri-code-line fs-2 mb-2 text-warning"></i>
                <div class="fw-bold">Clean Code</div>
                <small class="opacity-75">Well Organized</small>
              </div>
            </div>
            <div class="col-6 col-md-3">
              <div class="bg-white bg-opacity-15 rounded-3 p-3">
                <i class="ri-customer-service-line fs-2 mb-2 text-warning"></i>
                <div class="fw-bold">6 Months</div>
                <small class="opacity-75">Premium Support</small>
              </div>
            </div>
          </div>

          <div
            class="d-flex justify-content-center gap-3 flex-wrap"
            data-aos="fade-up"
            data-aos-delay="800"
            data-aos-duration="1600"
          >
            <a href="#" class="btn btn-warning btn-lg rounded-pill px-5 py-3 fw-bold">
              <i class="ri-download-line me-2"></i>Purchase Now - $49
            </a>
            <a href="#themes" class="btn btn-outline-light btn-lg rounded-pill px-5 py-3">
              <i class="ri-eye-line me-2"></i>View Live Demos
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Stats -->
  <section class="py-5 bg-light border-bottom">
    <div class="container">
      <div class="row text-center g-4">
        <div class="col-6 col-md-3">
          <div class="d-flex flex-column align-items-center">
            <div
              class="bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mb-3"
              style="width: 70px; height: 70px;"
            >
              <i class="ri-layout-3-line text-primary fs-1"></i>
            </div>
            <h4 class="fw-bold mb-1 text-primary">3</h4>
            <p class="text-muted mb-0">Unique Themes</p>
          </div>
        </div>
        <div class="col-6 col-md-3">
          <div class="d-flex flex-column align-items-center">
            <div
              class="bg-success bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mb-3"
              style="width: 70px; height: 70px;"
            >
              <i class="ri-pages-line text-success fs-1"></i>
            </div>
            <h4 class="fw-bold mb-1 text-success">25+</h4>
            <p class="text-muted mb-0">HTML Pages</p>
          </div>
        </div>
        <div class="col-6 col-md-3">
          <div class="d-flex flex-column align-items-center">
            <div
              class="bg-info bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mb-3"
              style="width: 70px; height: 70px;"
            >
              <i class="ri-smartphone-line text-info fs-1"></i>
            </div>
            <h4 class="fw-bold mb-1 text-info">100%</h4>
            <p class="text-muted mb-0">Responsive</p>
          </div>
        </div>
        <div class="col-6 col-md-3">
          <div class="d-flex flex-column align-items-center">
            <div
              class="bg-warning bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mb-3"
              style="width: 70px; height: 70px;"
            >
              <i class="ri-bootstrap-line text-warning fs-1"></i>
            </div>
            <h4 class="fw-bold mb-1 text-warning">Bootstrap 5</h4>
            <p class="text-muted mb-0">Framework</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Theme Previews Section -->
  <section id="themes" class="py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto text-center mb-5">
          <span
            class="badge bg-primary bg-opacity-25 text-primary px-3 py-2 rounded-pill mb-3"
            data-aos="fade-up"
            data-aos-duration="800"
          >
            <i class="ri-palette-line me-2"></i>Theme Collection
          </span>
          <h2
            class="display-4 fw-bold mb-4"
            data-aos="fade-up"
            data-aos-delay="200"
            data-aos-duration="1400"
          >
            Three Stunning Designs
          </h2>
          <p
            class="lead text-muted"
            data-aos="fade-up"
            data-aos-delay="400"
            data-aos-duration="1400"
          >
            Each theme provides the same comprehensive page structure with unique visual styling,
            giving you the perfect foundation for any HOA community website.
          </p>
        </div>
      </div>
      <div class="row g-4">
        <!-- Theme 1 -->
        <div class="col-lg-4" data-aos="zoom-in-up" data-aos-delay="100" data-aos-duration="1400">
          <div
            class="card p-0 border-0 shadow-lg h-100 position-relative overflow-hidden theme-card"
          >
            <div class="position-relative">
              <img
                src={getAssetPrefix('/assets/img/thumbnails/theme-1.jpg')}
                class="card-img-top"
                alt="Theme 1 Preview"
                style="height: 280px; object-fit: cover;"
              />
              <div
                class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center theme-overlay theme-overlay-primary"
                style="background-color: rgba(102, 126, 234, 0); opacity: 0;"
              >
                <a
                  href={getPathPrefix('/theme/1/home')}
                  target="_blank"
                  class="btn btn-dark btn-lg rounded-pill px-4"
                >
                  <i class="ri-external-link-line me-2"></i>Live Preview
                </a>
              </div>
            </div>
            <div class="card-body p-4">
              <h4 class="card-title fw-bold mb-3">
                <a
                  href={getPathPrefix('/theme/1/home')}
                  target="_blank"
                  class="text-decoration-none text-primary theme-title-link">Demo 1: Classic</a
                >
              </h4>
              <p class="card-text text-muted mb-4">
                Timeless, professional design with elegant typography and sophisticated color
                scheme. Perfect for established communities seeking formal presentation.
              </p>
              <div class="d-flex gap-2 flex-wrap mb-3">
                <span class="badge bg-primary bg-opacity-25 text-primary">Professional</span>
                <span class="badge bg-success bg-opacity-25 text-success">Elegant</span>
                <span class="badge bg-info bg-opacity-25 text-info">Traditional</span>
              </div>
              <!-- Mobile/Tablet Preview Button -->
              <a
                href={getPathPrefix('/theme/1/home')}
                target="_blank"
                class="btn btn-outline-primary btn rounded-pill px-4 w-100 d-lg-none"
              >
                <i class="ri-external-link-line me-2"></i>Live Preview
              </a>
            </div>
          </div>
        </div>

        <!-- Theme 2 -->
        <div class="col-lg-4" data-aos="zoom-in-up" data-aos-delay="200" data-aos-duration="1400">
          <div
            class="card p-0 border-0 shadow-lg h-100 position-relative overflow-hidden theme-card"
          >
            <div class="position-relative">
              <img
                src={getAssetPrefix('/assets/img/thumbnails/theme-2.jpg')}
                class="card-img-top"
                alt="Theme 2 Preview"
                style="height: 280px; object-fit: cover;"
              />
              <div
                class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center theme-overlay theme-overlay-success"
                style="background-color: rgba(25, 135, 84, 0); opacity: 0;"
              >
                <a
                  href={getPathPrefix('/theme/2/home')}
                  target="_blank"
                  class="btn btn-dark btn-lg rounded-pill px-4"
                >
                  <i class="ri-external-link-line me-2"></i>Live Preview
                </a>
              </div>
            </div>
            <div class="card-body p-4">
              <h4 class="card-title fw-bold mb-3">
                <a
                  href={getPathPrefix('/theme/2/home')}
                  target="_blank"
                  class="text-decoration-none text-primary theme-title-link">Demo 2: Modern</a
                >
              </h4>
              <p class="card-text text-muted mb-4">
                Contemporary design with video backgrounds and dynamic elements. Ideal for
                progressive communities embracing modern digital experiences.
              </p>
              <div class="d-flex gap-2 flex-wrap mb-3">
                <span class="badge bg-primary bg-opacity-25 text-primary">Contemporary</span>
                <span class="badge bg-success bg-opacity-25 text-success">Dynamic</span>
                <span class="badge bg-info bg-opacity-25 text-info">Interactive</span>
              </div>
              <!-- Mobile/Tablet Preview Button -->
              <a
                href={getPathPrefix('/theme/2/home')}
                target="_blank"
                class="btn btn-outline-success btn rounded-pill px-4 w-100 d-lg-none"
              >
                <i class="ri-external-link-line me-2"></i>Live Preview
              </a>
            </div>
          </div>
        </div>

        <!-- Theme 3 -->
        <div class="col-lg-4" data-aos="zoom-in-up" data-aos-delay="300" data-aos-duration="1400">
          <div
            class="card p-0 border-0 shadow-lg h-100 position-relative overflow-hidden theme-card"
          >
            <div class="position-relative">
              <img
                src={getAssetPrefix('/assets/img/thumbnails/theme-3.jpg')}
                class="card-img-top"
                alt="Theme 3 Preview"
                style="height: 280px; object-fit: cover;"
              />
              <div
                class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center theme-overlay theme-overlay-warning"
                style="background-color: rgba(255, 193, 7, 0); opacity: 0;"
              >
                <a
                  href={getPathPrefix('/theme/3/home')}
                  target="_blank"
                  class="btn btn-dark btn-lg rounded-pill px-4"
                >
                  <i class="ri-external-link-line me-2"></i>Live Preview
                </a>
              </div>
            </div>
            <div class="card-body p-4">
              <h4 class="card-title fw-bold mb-3">
                <a
                  href={getPathPrefix('/theme/3/home')}
                  target="_blank"
                  class="text-decoration-none text-primary theme-title-link">Demo 3: Premium</a
                >
              </h4>
              <p class="card-text text-muted mb-4">
                Sophisticated design with bold visuals and streamlined navigation. Perfect for
                luxury communities requiring premium aesthetics.
              </p>
              <div class="d-flex gap-2 flex-wrap mb-3">
                <span class="badge bg-primary bg-opacity-25 text-primary">Luxury</span>
                <span class="badge bg-success bg-opacity-25 text-success">Sophisticated</span>
                <span class="badge bg-info bg-opacity-25 text-info">Premium</span>
              </div>
              <!-- Mobile/Tablet Preview Button -->
              <a
                href={getPathPrefix('/theme/3/home')}
                target="_blank"
                class="btn btn-outline-warning btn rounded-pill px-4 w-100 d-lg-none"
              >
                <i class="ri-external-link-line me-2"></i>Live Preview
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-5 bg-light">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto text-center mb-5">
          <span
            class="badge bg-success bg-opacity-25 text-success px-3 py-2 rounded-pill mb-3"
            data-aos="fade-up"
            data-aos-duration="800"
          >
            <i class="ri-star-line me-2"></i>Template Features
          </span>
          <h2
            class="display-4 fw-bold mb-4"
            data-aos="fade-up"
            data-aos-delay="200"
            data-aos-duration="1400"
          >
            Everything You Need
          </h2>
          <p
            class="lead text-muted"
            data-aos="fade-up"
            data-aos-delay="400"
            data-aos-duration="1400"
          >
            Built with modern web technologies and best practices to create professional HOA
            websites that look great and perform perfectly.
          </p>
        </div>
      </div>
      <div class="row g-4">
        <!-- Responsive Design -->
        <div
          class="col-md-6 col-lg-4"
          data-aos="fade-up"
          data-aos-delay="100"
          data-aos-duration="1200"
        >
          <div class="card border-0 shadow-sm h-100 text-center p-4">
            <div
              class="bg-gradient-1 rounded-circle d-inline-flex align-items-center justify-content-center mb-4 mx-auto"
              style="width: 80px; height: 80px;"
            >
              <i class="ri-device-line text-white fs-1"></i>
            </div>
            <h4 class="fw-bold mb-3">Fully Responsive</h4>
            <p class="text-muted mb-0">
              Perfect display on all devices - desktop, tablet, and mobile. Built with Bootstrap 5
              for guaranteed compatibility.
            </p>
          </div>
        </div>

        <!-- Clean Code -->
        <div
          class="col-md-6 col-lg-4"
          data-aos="fade-up"
          data-aos-delay="200"
          data-aos-duration="1200"
        >
          <div class="card border-0 shadow-sm h-100 text-center p-4">
            <div
              class="bg-gradient-2 rounded-circle d-inline-flex align-items-center justify-content-center mb-4 mx-auto"
              style="width: 80px; height: 80px;"
            >
              <i class="ri-code-s-slash-line text-white fs-1"></i>
            </div>
            <h4 class="fw-bold mb-3">Clean, Organized Code</h4>
            <p class="text-muted mb-0">
              Well-structured, commented code that's easy to navigate, extend, and maintain. Perfect
              for developers of all skill levels.
            </p>
          </div>
        </div>

        <!-- Easy Customization -->
        <div
          class="col-md-6 col-lg-4"
          data-aos="fade-up"
          data-aos-delay="300"
          data-aos-duration="1200"
        >
          <div class="card border-0 shadow-sm h-100 text-center p-4">
            <div
              class="bg-gradient-3 rounded-circle d-inline-flex align-items-center justify-content-center mb-4 mx-auto"
              style="width: 80px; height: 80px;"
            >
              <i class="ri-palette-line text-white fs-1"></i>
            </div>
            <h4 class="fw-bold mb-3">Easy Customization</h4>
            <p class="text-muted mb-0">
              SCSS variables, utility classes, and modular components make theme customization
              straightforward and efficient.
            </p>
          </div>
        </div>

        <!-- Modern UI Components -->
        <div
          class="col-md-6 col-lg-4"
          data-aos="fade-up"
          data-aos-delay="400"
          data-aos-duration="1200"
        >
          <div class="card border-0 shadow-sm h-100 text-center p-4">
            <div
              class="bg-gradient-4 rounded-circle d-inline-flex align-items-center justify-content-center mb-4 mx-auto"
              style="width: 80px; height: 80px;"
            >
              <i class="ri-stack-line text-white fs-1"></i>
            </div>
            <h4 class="fw-bold mb-3">Rich UI Components</h4>
            <p class="text-muted mb-0">
              Extensive collection of pre-built components including navigation, forms, cards, and
              interactive elements.
            </p>
          </div>
        </div>

        <!-- SEO Optimized -->
        <div
          class="col-md-6 col-lg-4"
          data-aos="fade-up"
          data-aos-delay="500"
          data-aos-duration="1200"
        >
          <div class="card border-0 shadow-sm h-100 text-center p-4">
            <div
              class="bg-gradient-5 rounded-circle d-inline-flex align-items-center justify-content-center mb-4 mx-auto"
              style="width: 80px; height: 80px;"
            >
              <i class="ri-search-line text-white fs-1"></i>
            </div>
            <h4 class="fw-bold mb-3">SEO Optimized</h4>
            <p class="text-muted mb-0">
              Built with SEO best practices including semantic HTML, meta tags, and structured data
              for better search rankings.
            </p>
          </div>
        </div>

        <!-- Cross Browser Compatible -->
        <div
          class="col-md-6 col-lg-4"
          data-aos="fade-up"
          data-aos-delay="600"
          data-aos-duration="1200"
        >
          <div class="card border-0 shadow-sm h-100 text-center p-4">
            <div
              class="bg-gradient-6 rounded-circle d-inline-flex align-items-center justify-content-center mb-4 mx-auto"
              style="width: 80px; height: 80px;"
            >
              <i class="ri-window-line text-white fs-1"></i>
            </div>
            <h4 class="fw-bold mb-3">Cross Browser Compatible</h4>
            <p class="text-muted mb-0">
              Tested and optimized for all modern browsers including Chrome, Firefox, Safari, and
              Edge.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- What's Included Section -->
  <section class="py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto text-center mb-5">
          <span
            class="badge bg-info bg-opacity-25 text-info px-3 py-2 rounded-pill mb-3"
            data-aos="fade-up"
            data-aos-duration="800"
          >
            <i class="ri-gift-line me-2"></i>Package Contents
          </span>
          <h2
            class="display-4 fw-bold mb-4"
            data-aos="fade-up"
            data-aos-delay="200"
            data-aos-duration="1400"
          >
            What's Included
          </h2>
          <p
            class="lead text-muted"
            data-aos="fade-up"
            data-aos-delay="400"
            data-aos-duration="1400"
          >
            Complete package with everything you need to build a professional HOA website.
          </p>
        </div>
      </div>
      <div class="row g-4">
        <div
          class="col-md-6 col-lg-3"
          data-aos="fade-up"
          data-aos-delay="100"
          data-aos-duration="1600"
        >
          <div class="card border-0 shadow-sm text-center h-100 p-4">
            <div
              class="bg-primary bg-opacity-10 rounded-3 d-inline-flex align-items-center justify-content-center mb-4 mx-auto"
              style="width: 80px; height: 80px;"
            >
              <i class="ri-layout-3-line text-primary fs-1"></i>
            </div>
            <h5 class="fw-bold mb-3">3 Complete Themes</h5>
            <p class="text-muted mb-0">
              Classic, Modern, and Premium designs with unique visual styling and complete page
