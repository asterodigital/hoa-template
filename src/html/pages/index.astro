---
import FrontLayout from '../layouts/front/front-layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../utils/path.js'
---

<FrontLayout
  currentPath="home"
  title="HOA Website Templates"
  description="Professional, responsive HOA website templates for homeowner associations. 3 unique designs with admin panels, amenities management, and resident portals."
>
  <!-- Hero Section -->
  <section
    class="position-relative text-center py-5"
    style={`background-image: url('${getAssetPrefix('/assets/img/theme-images/hero-2.jpg')}'); background-size: cover; background-position: center; height: 70vh; display: flex; align-items: center;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-75"></div>

    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <h1 class="display-4 fw-bold text-white mb-3" data-aos="fade-up" data-aos-duration="1600">
            Premium HOA Website Templates
          </h1>
          <p
            class="lead mb-4"
            style="color: rgba(255, 255, 255, 0.9);"
            data-aos="fade-up"
            data-aos-delay="200"
            data-aos-duration="1600"
          >
            Professional, responsive templates designed specifically for Homeowner Associations. Get
            your community online with beautiful designs and powerful features.
          </p>
          <div
            class="d-flex justify-content-center gap-3 flex-wrap"
            data-aos="fade-up"
            data-aos-delay="400"
            data-aos-duration="1600"
          >
            <a href="#" class="btn btn-light btn-lg rounded-pill px-4">
              <i class="ri-download-line me-2"></i>Purchase Now - $49
            </a>
            <a href="#themes" class="btn btn-outline-light btn-lg rounded-pill px-4">
              <i class="ri-eye-line me-2"></i>View Demos
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick Stats -->
  <section class="py-4 bg-light">
    <div class="container">
      <div class="row text-center g-4">
        <div class="col-6 col-md-3">
          <div class="d-flex flex-column align-items-center">
            <i class="ri-layout-3-line text-primary fs-1 mb-2"></i>
            <h5 class="fw-bold mb-1">3</h5>
            <small class="text-muted">Unique Themes</small>
          </div>
        </div>
        <div class="col-6 col-md-3">
          <div class="d-flex flex-column align-items-center">
            <i class="ri-pages-line text-primary fs-1 mb-2"></i>
            <h5 class="fw-bold mb-1">25+</h5>
            <small class="text-muted">HTML Pages</small>
          </div>
        </div>
        <div class="col-6 col-md-3">
          <div class="d-flex flex-column align-items-center">
            <i class="ri-smartphone-line text-primary fs-1 mb-2"></i>
            <h5 class="fw-bold mb-1">100%</h5>
            <small class="text-muted">Responsive</small>
          </div>
        </div>
        <div class="col-6 col-md-3">
          <div class="d-flex flex-column align-items-center">
            <i class="ri-bootstrap-line text-primary fs-1 mb-2"></i>
            <h5 class="fw-bold mb-1">Bootstrap 5</h5>
            <small class="text-muted">Framework</small>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Theme Previews Section -->
  <section id="themes" class="py-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto text-center mb-5">
          <h2 class="display-5 fw-bold mb-3" data-aos="fade-up" data-aos-duration="1400">
            Demos for All HOA Communities
          </h2>
          <p
            class="lead text-muted"
            data-aos="fade-up"
            data-aos-delay="200"
            data-aos-duration="1400"
          >
            Each theme comes with unique styling and layouts while maintaining the same powerful
            features and functionality.
          </p>
        </div>
      </div>
      <div class="row g-4">
        <!-- Theme 1 -->
        <div class="col-lg-4" data-aos="zoom-in" data-aos-delay="100" data-aos-duration="1400">
          <div class="card border-0 shadow-lg h-100 position-relative overflow-hidden p-0">
            <div class="position-relative">
              <img
                src={getAssetPrefix('/assets/img/thumbnails/theme-1.jpg')}
                class="card-img-top"
                alt="Theme 1 Preview"
                style="height: 240px; object-fit: cover;"
              />
              <div
                class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-75 d-flex align-items-center justify-content-center opacity-0 transition-opacity"
                style="transition: opacity 0.3s ease;"
              >
                <a
                  href={getPathPrefix('/theme/1/home')}
                  target="_blank"
                  class="btn btn-light btn-lg rounded-pill"
                >
                  <i class="ri-external-link-line me-2"></i>Live Preview
                </a>
              </div>
            </div>
            <div class="card-body border-top p-4">
              <h4 class="card-title fw-bold">Demo 1 - Classic</h4>
              <p class="card-text text-muted">
                Clean, timeless design with elegant typography and sophisticated color scheme.
                Perfect for established communities.
              </p>
              <div class="d-flex gap-2 flex-wrap">
                <span class="badge bg-primary-subtle text-primary">Hero Banner</span>
                <span class="badge bg-success-subtle text-success">Animations</span>
                <span class="badge bg-info-subtle text-info">Typography</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Theme 2 -->
        <div class="col-lg-4" data-aos="zoom-in" data-aos-delay="200" data-aos-duration="1400">
          <div class="card border-0 shadow-lg h-100 position-relative overflow-hidden p-0">
            <div class="position-relative">
              <img
                src={getAssetPrefix('/assets/img/thumbnails/theme-2.jpg')}
                class="card-img-top"
                alt="Theme 2 Preview"
                style="height: 240px; object-fit: cover;"
              />
              <div
                class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-75 d-flex align-items-center justify-content-center opacity-0"
                style="transition: opacity 0.3s ease;"
              >
                <a
                  href={getPathPrefix('/theme/2/home')}
                  target="_blank"
                  class="btn btn-light btn-lg rounded-pill"
                >
                  <i class="ri-external-link-line me-2"></i>Live Preview
                </a>
              </div>
            </div>
            <div class="card-body border-top p-4">
              <h4 class="card-title fw-bold">Demo 2 - Modern</h4>
              <p class="card-text text-muted">
                Contemporary design with video backgrounds and dynamic elements. Great for
                progressive communities.
              </p>
              <div class="d-flex gap-2 flex-wrap">
                <span class="badge bg-primary-subtle text-primary">Video Hero</span>
                <span class="badge bg-success-subtle text-success">Modern UI</span>
                <span class="badge bg-info-subtle text-info">Minimal</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Theme 3 -->
        <div class="col-lg-4" data-aos="zoom-in" data-aos-delay="300" data-aos-duration="1400">
          <div class="card border-0 shadow-lg h-100 position-relative overflow-hidden p-0">
            <div class="position-relative">
              <img
                src={getAssetPrefix('/assets/img/thumbnails/theme-3.jpg')}
                class="card-img-top"
                alt="Theme 3 Preview"
                style="height: 240px; object-fit: cover;"
              />
              <div
                class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-75 d-flex align-items-center justify-content-center opacity-0 transition-opacity"
                style="transition: opacity 0.3s ease;"
              >
                <a
                  href={getPathPrefix('/theme/3/home')}
                  target="_blank"
                  class="btn btn-light btn-lg rounded-pill"
                >
                  <i class="ri-external-link-line me-2"></i>Live Preview
                </a>
              </div>
            </div>
            <div class="card-body border-top p-4">
              <h4 class="card-title fw-bold">Demo 3 - Premium</h4>
              <p class="card-text text-muted">
                Sleek design with bold visuals and streamlined navigation. Perfect for luxury
                communities.
              </p>
              <div class="d-flex gap-2 flex-wrap">
                <span class="badge bg-primary-subtle text-primary">Premium UI</span>
                <span class="badge bg-success-subtle text-success">Gallery</span>
                <span class="badge bg-info-subtle text-info">Luxury</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="py-5 bg-light">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto text-center mb-5">
          <h2 class="display-5 fw-bold mb-3" data-aos="fade-up" data-aos-duration="1400">
            Powerful Features
          </h2>
          <p
            class="lead text-muted"
            data-aos="fade-up"
            data-aos-delay="200"
            data-aos-duration="1400"
          >
            Everything your HOA needs to create a professional online presence and manage community
            operations effectively.
          </p>
        </div>
      </div>
      <div class="row g-4">
        <!-- Color Styling -->
        <div
          class="col-md-6 col-lg-4"
          data-aos="flip-up"
          data-aos-delay="100"
          data-aos-duration="1200"
        >
          <div class="text-center">
            <div
              class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
              style="width: 80px; height: 80px;"
            >
              <i class="ri-palette-line text-white fs-1"></i>
            </div>
            <h4 class="fw-bold">Color Styling</h4>
            <p class="text-muted">
              Easily update your theme's color scheme from a single location. Changes reflect
              instantly.
            </p>
          </div>
        </div>

        <!-- User-Friendly -->
        <div
          class="col-md-6 col-lg-4"
          data-aos="flip-up"
          data-aos-delay="200"
          data-aos-duration="1200"
        >
          <div class="text-center">
            <div
              class="bg-info rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
              style="width: 80px; height: 80px;"
            >
              <i class="ri-user-line text-white fs-1"></i>
            </div>
            <h4 class="fw-bold">User-Friendly</h4>
            <p class="text-muted">
              Built for simplicity and ease of use. The templates are designed to be intuitive to
              work with.
            </p>
          </div>
        </div>

        <!-- Responsive Design -->
        <div
          class="col-md-6 col-lg-4"
          data-aos="flip-up"
          data-aos-delay="300"
          data-aos-duration="1200"
        >
          <div class="text-center">
            <div
              class="bg-success rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
              style="width: 80px; height: 80px;"
            >
              <i class="ri-smartphone-line text-white fs-1"></i>
            </div>
            <h4 class="fw-bold">Fully Responsive</h4>
            <p class="text-muted">
              Perfect display on all devices - desktop, tablet, and mobile with Bootstrap 5
              framework.
            </p>
          </div>
        </div>

        <!-- Clean Code -->
        <div
          class="col-md-6 col-lg-4"
          data-aos="flip-up"
          data-aos-delay="400"
          data-aos-duration="1200"
        >
          <div class="text-center">
            <div
              class="bg-secondary rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
              style="width: 80px; height: 80px;"
            >
              <i class="ri-code-s-slash-line text-white fs-1"></i>
            </div>
            <h4 class="fw-bold">Clean Code</h4>
            <p class="text-muted">
              Clean, organized, and well-structured code. Easy to navigate, extend, and maintain.
            </p>
          </div>
        </div>

        <!-- Easy Customization -->
        <div
          class="col-md-6 col-lg-4"
          data-aos="flip-up"
          data-aos-delay="500"
          data-aos-duration="1200"
        >
          <div class="text-center">
            <div
              class="bg-warning rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
              style="width: 80px; height: 80px;"
            >
              <i class="ri-hammer-line text-white fs-1"></i>
            </div>
            <h4 class="fw-bold">Easy Customization</h4>
            <p class="text-muted">
              SCSS variables, utility classes, and modular components for easy theme customization.
            </p>
          </div>
        </div>

        <!-- Modern UI Components -->
        <div
          class="col-md-6 col-lg-4"
          data-aos="flip-up"
          data-aos-delay="600"
          data-aos-duration="1200"
        >
          <div class="text-center">
            <div
              class="bg-danger rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
              style="width: 80px; height: 80px;"
            >
              <i class="ri-stack-line text-white fs-1"></i>
            </div>
            <h4 class="fw-bold">UI Components</h4>
            <p class="text-muted">
              Rich collection of pre-built components including cards, modals, forms, and data
              tables.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Theme Features Section -->
  <section class="py-5 bg-light">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto text-center mb-5">
          <h2 class="display-5 fw-bold mb-3" data-aos="fade-up" data-aos-duration="1400">
            Theme Features
          </h2>
          <p
            class="lead text-muted"
            data-aos="fade-up"
            data-aos-delay="200"
            data-aos-duration="1400"
          >
            Comprehensive backend functionality for managing your HOA community effectively.
          </p>
        </div>
      </div>
      <div class="row g-4">
        <div
          class="col-md-6 col-lg-3"
          data-aos="fade-up"
          data-aos-delay="100"
          data-aos-duration="1600"
        >
          <div class="card border-0 shadow-sm text-center h-100">
            <div class="card-body p-4">
              <i class="ri-user-settings-line text-primary fs-1 mb-3"></i>
              <h5 class="fw-bold">Resident Management</h5>
              <p class="text-muted mb-0">
                Add, edit, and manage resident profiles with contact information and property
                details.
              </p>
            </div>
          </div>
        </div>
        <div
          class="col-md-6 col-lg-3"
          data-aos="fade-up"
          data-aos-delay="200"
          data-aos-duration="1600"
        >
          <div class="card border-0 shadow-sm text-center h-100">
            <div class="card-body p-4">
              <i class="ri-calendar-check-line text-primary fs-1 mb-3"></i>
