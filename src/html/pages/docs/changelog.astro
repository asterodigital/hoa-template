---
import AdminLayout from '../../layouts/admin/admin-layout.astro'
import PageHeader from '../../components/common/page-header.astro'
import Toc from '../../components/toc/toc.astro'
import { getPathPrefix } from '../../../utils/path.js'

const pageHeaderProps = {
  title: 'Changelog',
  breadcrumbs: [
    { label: 'Docs', href: getPathPrefix('/docs') },
    { label: 'Changelog', class: 'active' }
  ]
}
---

<AdminLayout
  currentPath="docs/changelog"
  title="Changelog"
  description="Stay up to date with the latest features, fixes, and updates to the project."
>
  <PageHeader {...pageHeaderProps} />

  <div class="row">
    <div class="col-lg-9 col-xl-9 order-1 order-lg-0">
      <div class="mb-5">
        <div class="mb-5">
          <h2 class="h5" id="v1-2-0">v1.2.0 <small class="text-muted">– 2025-05-10</small></h2>
          <ul>
            <li>✨ Added support for dark mode.</li>
            <li>📦 Updated dependencies to latest versions.</li>
            <li>🐛 Fixed layout bug on mobile nav.</li>
          </ul>
        </div>

        <div class="mb-5">
          <h2 class="h5" id="v1-1-0">v1.1.0 <small class="text-muted">– 2025-04-02</small></h2>
          <ul>
            <li>🚀 Introduced dynamic route support.</li>
            <li>📝 Improved documentation structure.</li>
            <li>🔧 Refactored component loading logic.</li>
          </ul>
        </div>

        <div class="mb-5">
          <h2 class="h5" id="v1-0-0">v1.0.0 <small class="text-muted">– 2025-03-01</small></h2>
          <ul>
            <li>🎉 Initial release of the project.</li>
          </ul>
        </div>
      </div>
    </div>
    <Toc />
  </div>
</AdminLayout>
