// JavaScript for interactive button group functionality
const interactiveButtonGroupJS = `<script>
let counter = 0;
let activeFilters = new Set();
let progressInterval = null;
let currentProgress = 0;
let isPaused = false;

// Counter functions
function incrementCounter() {
  counter++;
  updateCounterDisplay();
}

function decrementCounter() {
  counter--;
  updateCounterDisplay();
}

function resetCounter() {
  counter = 0;
  updateCounterDisplay();
}

function updateCounterDisplay() {
  document.getElementById('counter-display').textContent = counter;
}

// Filter functions
function toggleFilter(button) {
  const filter = button.dataset.filter;
  const isActive = button.classList.contains('active');

  if (isActive) {
    button.classList.remove('active');
    activeFilters.delete(filter);
  } else {
    button.classList.add('active');
    activeFilters.add(filter);
  }

  updateFilterCount();
}

function updateFilterCount() {
  const count = activeFilters.size;
  document.getElementById('filter-count').textContent = count + ' selected';
}

function applyFilters() {
  const filterArray = Array.from(activeFilters);
  alert('Applying filters: ' + (filterArray.length ? filterArray.join(', ') : 'none'));
}

function clearFilters() {
  activeFilters.clear();
  document.querySelectorAll('[data-filter]').forEach(btn => {
    btn.classList.remove('active');
  });
  updateFilterCount();
}

// System status functions
function toggleSystemStatus(system, button) {
  const badge = button.querySelector('.badge');
  const isOnline = button.classList.contains('btn-success');

  if (isOnline) {
    button.className = 'btn btn-danger';
    badge.textContent = 'Offline';
  } else {
    button.className = 'btn btn-success';
    badge.textContent = 'Online';
  }
}

// Progress simulation functions
function startProgress() {
  if (currentProgress >= 100) {
    currentProgress = 0;
  }

  isPaused = false;
  document.getElementById('start-btn').disabled = true;
  document.getElementById('pause-btn').disabled = false;
  document.getElementById('stop-btn').disabled = false;

  progressInterval = setInterval(() => {
    if (!isPaused) {
      currentProgress += Math.random() * 5;
      if (currentProgress >= 100) {
        currentProgress = 100;
        completeProgress();
      }
      updateProgressBar();
    }
  }, 200);
}

function pauseProgress() {
  isPaused = !isPaused;
  const pauseBtn = document.getElementById('pause-btn');
  if (isPaused) {
    pauseBtn.innerHTML = '<i class="ri-play-line me-1"></i>Resume';
    document.getElementById('progress-text').textContent = 'Paused at ' + Math.round(currentProgress) + '%';
  } else {
    pauseBtn.innerHTML = '<i class="ri-pause-line me-1"></i>Pause';
  }
}

function stopProgress() {
  clearInterval(progressInterval);
  currentProgress = 0;
  isPaused = false;

  document.getElementById('start-btn').disabled = false;
  document.getElementById('pause-btn').disabled = true;
  document.getElementById('stop-btn').disabled = true;
  document.getElementById('pause-btn').innerHTML = '<i class="ri-pause-line me-1"></i>Pause';

  updateProgressBar();
  document.getElementById('progress-text').textContent = 'Stopped';
}

function completeProgress() {
  clearInterval(progressInterval);
  document.getElementById('start-btn').disabled = false;
  document.getElementById('pause-btn').disabled = true;
  document.getElementById('stop-btn').disabled = true;
  document.getElementById('progress-text').textContent = 'Complete!';
}

function updateProgressBar() {
  const progressBar = document.getElementById('progress-bar');
  progressBar.style.width = currentProgress + '%';

  if (!isPaused && currentProgress < 100) {
    document.getElementById('progress-text').textContent = 'Processing... ' + Math.round(currentProgress) + '%';
  }
}
</script>`

