const pageScript = `
  <script>
    /**
     * Initialize form functionality when the DOM is fully loaded
     */
    document.addEventListener('DOMContentLoaded', function() {
      // Handle password visibility toggle
      const passwordToggleBtns = document.querySelectorAll('.password-toggle');
      passwordToggleBtns.forEach(btn => {
        btn.addEventListener('click', function() {
          const passwordInput = this.previousElementSibling;
          const newType = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
          passwordInput.setAttribute('type', newType);

          // Toggle visibility icon
          const visibilityIcon = this.querySelector('i');
          visibilityIcon.classList.toggle('ri-eye-line');
          visibilityIcon.classList.toggle('ri-eye-off-line');
        });
      });

      // Initialize Bootstrap tabs if present in the DOM
      const formTabsElement = document.querySelector('#formTabs');
      if (formTabsElement) {
        const formTabs = new bootstrap.Tab(formTabsElement);
      }
    });
  </script>
`
