---
import AdminLayout from '../../layouts/admin/admin-layout.astro'
import PageHeader from '../../components/common/page-header.astro'
import Toc from '../../components/toc/toc.astro'
import { getPathPrefix } from '../../../utils/path.js'

const pageHeaderProps = {
  title: 'Get Started',
  breadcrumbs: [
    { label: 'Docs', href: getPathPrefix('/docs') },
    { label: 'Get Started', class: 'active' }
  ]
}
---

<AdminLayout
  currentPath="docs"
  title="Get Started"
  description="Complete guide to setting up and customizing your HOA template package."
>
  <PageHeader {...pageHeaderProps} />

  <div class="row">
    <div class="col-lg-9 col-xl-9 order-1 order-lg-0">
      <div class="mb-5">
        <h2 class="h4" id="overview">🏡 Overview</h2>
        <p>
          Welcome to the HOA Template package! This comprehensive solution includes everything you
          need to create a professional homeowner association website with 3 unique themes and a
          powerful admin dashboard.
        </p>
        <div class="alert alert-info">
          <i class="ri-information-line me-2"></i>
          <strong>What's Included:</strong> 3 complete themes, 25+ pages, admin panel, user management,
          responsive design, and 6 months of support.
        </div>
      </div>

