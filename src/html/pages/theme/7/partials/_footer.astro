---
import { getPathPrefix } from '../../../../../utils/path.js'
import Logo from './_topbar/_logo.astro'
---

<!-- Divider -->
<div class="position-relative d-none d-xl-block" style="margin-top: 8rem;">
  <div class="position-absolute bottom-0 w-100 z-n1">
    <img
      src="https://asterodigital.com/storage/local/aalp/cms/media/70/gradient.svg"
      alt="Gradient"
      class="w-100"
    />
  </div>
  <div
    class="d-flex position-absolute bottom-0 start-0 w-100 overflow-hidden mb-n1"
    style="color: var(--bs-body-bg)"
  >
    <div class="position-relative start-50 translate-middle-x flex-shrink-0" style="width: 3774px">
      <svg
        width="3774"
        height="99"
        viewBox="0 0 3774 99"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M0 200.003C0 200.003 1137.52 0.188224 1873.5 0.000134392C2614.84 -0.189325 3774 200.003 3774 200.003H0Z"
          fill="currentColor"></path>
