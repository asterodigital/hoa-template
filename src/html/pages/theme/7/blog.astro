                  <i class="ri-user-line me-1"></i>
                  <span>By Azad Shaikh</span>
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-6 col-xl-4">
          <!-- Search -->
          <div class="input-group mb-4" data-aos="fade-left" data-aos-duration="1000">
            <input
              type="text"
              class="form-control form-control-lg rounded me-2"
              placeholder="Search..."
            />
            <button class="btn btn-lg btn-outline-primary rounded" type="button">
              <i class="ri-search-line"></i>
            </button>
