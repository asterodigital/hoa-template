  <section class="bg-body py-5">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 text-center">
          <h1 class="mb-3" data-aos="fade-down" data-aos-duration="1000">Blogs</h1>
          <p
            class="fs-5 text-muted mb-5"
            data-aos="fade-down"
            data-aos-delay="100"
            data-aos-duration="1000"
