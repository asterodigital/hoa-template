---
import Logo from './_topbar/_logo.astro'
import { getPathPrefix } from '../../../../../utils/path'
const rawPath = Astro.url.pathname
const currentPath = rawPath.replace(/\.html$/, '') // remove .html if present
---

<!-- Navbar -->
<div class="sticky-top shadow-sm z-4">
  <!-- Topbar -->
  <div
    class="small bg-dark text-light d-none d-lg-block py-2"
    data-aos="fade-down"
    data-aos-delay="100"
    data-aos-duration="800"
  >
    <div class="container">
      <div class="row align-items-center text-center text-lg-start gx-3 gy-2">
        <!-- Left: Phone & Email -->
        <div
          class="col-12 col-lg-auto d-flex justify-content-center justify-content-lg-start flex-wrap gap-3"
        >
          <div>
            <i class="ri-phone-fill text-primary me-1"></i>
            <a href="tel:+12345678901" class="text-light text-decoration-none">+1 (234) 567-8901</a>
          </div>
          <div>
            <i class="ri-mail-fill text-primary me-1"></i>
            <a href="mailto:hello@email.com" class="text-light text-decoration-none"
              >hello@email.com</a
            >
          </div>
        </div>

        <!-- Right: Hours & Location -->
        <div
          class="col-12 col-lg-auto d-flex justify-content-center justify-content-lg-end flex-wrap gap-3 ms-lg-auto"
        >
          <div>
            <i class="ri-time-fill text-primary me-1"></i>
            Mon–Fri: 9am–6pm
          </div>
          <div>
            <i class="ri-map-pin-fill text-primary me-1"></i>
            123 Longhorn Heights, Austin, TX
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-body border-top">
    <div class="container">
      <!-- Brand Logo or Text -->
      <a
        class="navbar-brand d-flex align-items-center"
        href={getPathPrefix('/theme/2/home')}
        data-aos="fade-right"
        data-aos-delay="200"
        data-aos-duration="800"
      >
        <Logo />
      </a>

      <!-- Offcanvas Toggler -->
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="offcanvas"
        data-bs-target="#offcanvasNavbar"
        aria-controls="offcanvasNavbar"
        aria-label="Toggle navigation"
        data-aos="fade-left"
        data-aos-delay="300"
        data-aos-duration="800"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- Offcanvas Menu -->
      <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar">
        <div class="offcanvas-header">
          <a class="navbar-brand d-flex align-items-center" href={getPathPrefix('/theme/2/home')}>
            <Logo />
          </a>
          <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"
          ></button>
        </div>
        <div class="offcanvas-body d-flex flex-column justify-content-between h-100">
          <!-- For lg+ screens -->
          <ul
            class="navbar-nav navbar-highlight flex-grow-1 pe-3 justify-content-center d-none d-lg-flex"
            data-aos="fade-down"
            data-aos-delay="400"
            data-aos-duration="800"
          >
            <!-- Home -->
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/2/home' ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/home')}
              >
                <i class="ri-home-2-line"></i>
                <span>Home</span>
              </a>
            </li>

            <!-- About Dropdown -->
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                id="aboutDropdown"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                <i class="ri-information-line"></i>
                <span>About</span>
              </a>
              <ul class="dropdown-menu" aria-labelledby="aboutDropdown">
                <li>
                  <a
                    class={`dropdown-item${currentPath === '/theme/2/about' ? ' active' : ''}`}
                    href={getPathPrefix('/theme/2/about')}>About Us</a
                  >
                </li>
                <li>
                  <a
                    class={`dropdown-item${currentPath === '/theme/2/amenities' ? ' active' : ''}`}
                    href={getPathPrefix('/theme/2/amenities')}>Amenities</a
                  >
                </li>
                <li>
                  <a
                    class={`dropdown-item${currentPath === '/theme/2/facilities' ? ' active' : ''}`}
                    href={getPathPrefix('/theme/2/facilities')}>Facilities</a
                  >
                </li>
                <li>
                  <a
                    class={`dropdown-item${currentPath === '/theme/2/history' ? ' active' : ''}`}
                    href={getPathPrefix('/theme/2/history')}>History</a
                  >
                </li>
                <li>
                  <a
                    class={`dropdown-item${currentPath === '/theme/2/faq' ? ' active' : ''}`}
                    href={getPathPrefix('/theme/2/faq')}>FAQs</a
                  >
                </li>
              </ul>
            </li>

            <!-- Community Dropdown -->
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                id="communityDropdown"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                <i class="ri-group-line"></i>
                <span>Community</span>
              </a>
              <ul class="dropdown-menu" aria-labelledby="communityDropdown">
                <li>
                  <a
                    class={`dropdown-item${currentPath === '/theme/2/board-members' ? ' active' : ''}`}
                    href={getPathPrefix('/theme/2/board-members')}>Board Members</a
                  >
                </li>
                <li>
                  <a
                    class={`dropdown-item${currentPath === '/theme/2/gallery' ? ' active' : ''}`}
                    href={getPathPrefix('/theme/2/gallery')}>Gallery</a
                  >
                </li>
                <li>
                  <a
                    class={`dropdown-item${currentPath === '/theme/2/events' ? ' active' : ''}`}
                    href={getPathPrefix('/theme/2/events')}>Events</a
                  >
                </li>
                <li>
                  <a
                    class={`dropdown-item${currentPath === '/theme/2/news' ? ' active' : ''}`}
                    href={getPathPrefix('/theme/2/news')}>News</a
                  >
                </li>
              </ul>
            </li>

            <!-- Blog Dropdown -->
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                id="blogDropdown"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="false"
              >
                <i class="ri-news-line"></i>
                <span>Blog</span>
              </a>
              <ul class="dropdown-menu" aria-labelledby="blogDropdown">
                <li>
                  <a
                    class={`dropdown-item${currentPath === '/theme/2/blog-1' ? ' active' : ''}`}
                    href={getPathPrefix('/theme/2/blog-1')}>Blog – No Sidebar</a
                  >
                </li>
                <li>
                  <a
                    class={`dropdown-item${currentPath === '/theme/2/blog-2' ? ' active' : ''}`}
                    href={getPathPrefix('/theme/2/blog-2')}>Blog – Left Sidebar</a
                  >
                </li>
                <li>
                  <a
                    class={`dropdown-item${currentPath === '/theme/2/blog-3' ? ' active' : ''}`}
                    href={getPathPrefix('/theme/2/blog-3')}>Blog – Right Sidebar</a
                  >
                </li>
                <li>
                  <a
                    class={`dropdown-item${currentPath === '/theme/2/post-1' ? ' active' : ''}`}
                    href={getPathPrefix('/theme/2/post-1')}>Blog Post – No Sidebar</a
                  >
                </li>
                <li>
                  <a
                    class={`dropdown-item${currentPath === '/theme/2/post-2' ? ' active' : ''}`}
                    href={getPathPrefix('/theme/2/post-2')}>Blog Post – Left Sidebar</a
                  >
                </li>
                <li>
                  <a
                    class={`dropdown-item${currentPath === '/theme/2/post-3' ? ' active' : ''}`}
                    href={getPathPrefix('/theme/2/post-3')}>Blog Post – Right Sidebar</a
                  >
                </li>
              </ul>
            </li>

            <!-- Contact -->
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/2/contact' ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/contact')}
              >
                <i class="ri-phone-line"></i>
                <span>Contact</span>
              </a>
            </li>
          </ul>

          <!-- For smaller screens -->
          <ul class="navbar-nav flex-grow-1 justify-content-start d-flex d-lg-none">
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/2/home' ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/home')}>Home</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/2/about' ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/about')}>About</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/2/amenities' ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/amenities')}>Amenities</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/2/board-members' ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/board-members')}>Board Members</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/2/blog-1' ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/blog-1')}>Blog – 1</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/2/blog-2' ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/blog-2')}>Blog – 2</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/2/blog-3' ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/blog-3')}>Blog – 3</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/2/post-1' ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/post-1')}>Blog Post – 1</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/2/post-2' ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/post-2')}>Blog Post – 2</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/2/post-3' ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/post-3')}>Blog Post – 3</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/2/contact' ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/contact')}>Contact</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/2/events' ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/events')}>Events</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/2/facilities' ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/facilities')}>Facilities</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/2/faq' ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/faq')}>FAQs</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/2/gallery' ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/gallery')}>Gallery</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/2/history' ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/history')}>History</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/2/news' ? ' active' : ''}`}
                href={getPathPrefix('/theme/2/news')}>News</a
              >
            </li>
          </ul>

          <!-- Contact Details (Bottom) -->
          <div class="d-block d-lg-none bg-secondary-subtle rounded p-3 mt-2">
            <div class="mb-2">
              <i class="ri-phone-fill text-primary me-1"></i>
              <a href="tel:+12345678901" class="text-body text-decoration-none">+1 (234) 567-8901</a
              >
            </div>
            <div class="mb-2">
              <i class="ri-mail-fill text-primary me-1"></i>
              <a href="mailto:hello@email.com" class="text-body text-decoration-none"
                >hello@email.com</a
              >
            </div>
            <div class="mb-2">
              <i class="ri-time-fill text-primary me-1"></i>
              Mon–Fri: 9am–6pm
            </div>
            <div>
              <i class="ri-map-pin-fill text-primary me-1"></i>
              123 Longhorn Heights, Austin, TX
            </div>
          </div>

          <!-- Bottom Section -->
          <div class="d-block d-lg-none mt-4">
            <a href="mailto:hello@email.com" class="btn btn-outline-primary rounded w-100 mb-2">
              <i class="ri-mail-fill me-2"></i>Email Us
            </a>
            <a href="tel:+12345678901" class="btn btn-primary rounded w-100">
              <i class="ri-phone-fill me-2"></i>Call Us
            </a>
          </div>
        </div>
      </div>
      <div class="d-none d-lg-flex">
        <a
          href={getPathPrefix('/theme/2/contact')}
          class="btn btn-lg btn-primary rounded"
          data-aos="fade-left"
          data-aos-delay="200"
          data-aos-duration="800">Get in Touch</a
        >
      </div>
    </div>
  </nav>
</div>
