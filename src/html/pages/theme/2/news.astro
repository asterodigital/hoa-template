---
import Head from '../../../../html/layouts/front/partials/_head.astro'
import Scripts from '../../../../html/layouts/front/partials/_scripts.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <Head />
  </head>
  <body>
    <!-- Main Content -->
    <main>
      <!-- Page Content -->
      <div class="content-wrapper">
        <!-- Navbar -->
        <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-body shadow-sm z-3">
          <div class="container">
            <!-- Brand Logo or Text -->
            <a class="navbar-brand d-flex align-items-center" href="/theme/2/home">
              <img
                src="/dist/assets/img/placeholder-logos/logoipsum-334.svg"
                alt="Logo"
                class="me-2"
                style="height: 32px;"
              />
            </a>

            <!-- Offcanvas Toggler -->
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="offcanvas"
              data-bs-target="#offcanvasNavbar"
              aria-controls="offcanvasNavbar"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Offcanvas Menu -->
            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar">
              <div class="offcanvas-header">
                <a class="navbar-brand d-flex align-items-center" href="/theme/2/home">
                  <img
                    src="/dist/assets/img/placeholder-logos/logoipsum-334.svg"
                    alt="Logo"
                    class="me-2"
                    style="height: 32px;"
                  />
                </a>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="offcanvas"
                  aria-label="Close"></button>
              </div>
              <div class="offcanvas-body d-flex flex-column justify-content-between h-100">
                <ul class="navbar-nav navbar-underline justify-content-end">
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/2/home">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/2/about">About</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/2/amenities">Amenities</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/2/board-members">Board</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/2/events">Events</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/2/facilities">Facilities</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/2/faq">FAQs</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/2/gallery">Gallery</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/2/history">History</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/theme/2/news">News</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/2/contact">Contact</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </nav>

        <!-- Banner Section -->
        <section class="text-bg-primary py-5">
          <div class="container">
            <div class="row text-center text-md-start">
              <div class="col-lg-7">
                <h1 class="display-4 fw-semibold mb-2">News</h1>
                <p class="fs-4 mb-4">
                  Stay informed with the latest updates, announcements, and neighborhood happenings
                  at Longhorn Heights.
                </p>
                <div
                  class="d-flex justify-content-center justify-content-md-start flex-wrap gap-2 mb-2"
                >
                  <a href="#" class="btn btn-lg btn-light">
                    Explore Community<i class="ri-arrow-right-line ms-2"></i>
                  </a>
                  <a href="/theme/2/contact" class="btn btn-lg btn-outline-light">
                    Contact Us<i class="ri-arrow-right-line ms-2"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- News Section -->
        <section class="bg-body py-5">
          <div class="container">
            <h2 class="fs-1 text-md-center mb-2">Community News</h2>
            <p class="lead text-md-center mb-4">
              Stay informed with the latest updates, announcements, and neighborhood happenings at
              Longhorn Heights.
            </p>

            <div class="row g-4">
              <!-- News Item 1 -->
              <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                <div class="card h-100 border p-0">
                  <img
                    src="/dist/assets/img/theme-images/img-4.jpg"
                    class="card-img-top img-fluid"
                    style="height: 200px; object-fit: cover;"
                    alt="News Image"
                  />
                  <div class="card-body p-3">
                    <a href="#" class="text-decoration-none text-body">
                      <h5 class="card-title fs-5">New Playground Installation Completed</h5>
                    </a>
                    <p class="text-muted mb-2">
                      <i class="ri-calendar-line me-1"></i>May 20, 2025 ·
                      <i class="ri-user-line ms-2 me-1"></i>By HOA Admin
                    </p>
                    <p class="card-text mb-2">
                      Our upgraded playground area is now open! It features new equipment, benches,
                      and shaded areas for families to enjoy.
                    </p>
                    <a href="#" class="link-primary text-decoration-none">Read More</a>
                  </div>
                </div>
              </div>
              <!-- News Item 2 -->
              <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                <div class="card h-100 border p-0">
                  <img
                    src="/dist/assets/img/theme-images/img-2.jpg"
                    class="card-img-top img-fluid"
                    style="height: 200px; object-fit: cover;"
                    alt="News Image"
                  />
                  <div class="card-body p-3">
                    <a href="#" class="text-decoration-none text-body">
                      <h5 class="card-title fs-5">Reminder: Pool Safety Guidelines</h5>
                    </a>
                    <p class="text-muted mb-2">
                      <i class="ri-calendar-line me-1"></i>May 10, 2025 ·
                      <i class="ri-user-line ms-2 me-1"></i>By Safety Committee
                    </p>
                    <p class="card-text mb-2">
                      As summer kicks off, please review the HOA’s pool safety rules to ensure a
                      safe and fun season for all.
                    </p>
                    <a href="#" class="link-primary text-decoration-none">Read More</a>
                  </div>
                </div>
              </div>
              <!-- News Item 3 -->
              <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                <div class="card h-100 border p-0">
                  <img
                    src="/dist/assets/img/theme-images/img-5.jpg"
                    class="card-img-top img-fluid"
                    style="height: 200px; object-fit: cover;"
                    alt="News Image"
                  />
                  <div class="card-body p-3">
                    <a href="#" class="text-decoration-none text-body">
                      <h5 class="card-title fs-5">New Jogging Path Now Open Along Greenbelt</h5>
                    </a>
                    <p class="text-muted mb-2">
                      <i class="ri-calendar-line me-1"></i>Apr 15, 2025 ·
                      <i class="ri-user-line ms-2 me-1"></i>By Emily Chen
                    </p>
                    <p class="card-text mb-2">
                      Residents can now enjoy a newly paved jogging and walking path that winds
                      through the Longhorn Heights greenbelt.
                    </p>
                    <a href="#" class="link-primary text-decoration-none">Read More</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Footer -->
        <footer class="bg-body pt-5 pb-4 border-top">
          <div class="container">
            <div class="row gy-4">
              <!-- Logo and Contact Info -->
              <div class="col-lg-4 col-md-6">
                <img
                  src="/dist/assets/img/placeholder-logos/logoipsum-334.svg"
                  alt="Logo"
                  style="height: 32px;"
                  class="mb-4"
                />
                <ul class="list-unstyled">
                  <li class="mb-2">
                    <a href="tel:+12345678901" class="text-body text-decoration-none">
                      <i class="ri-phone-fill text-primary me-2"></i>+1 (234) 567-8901
                    </a>
                  </li>
                  <li class="mb-2">
                    <a href="mailto:hello@email.com" class="text-body text-decoration-none">
                      <i class="ri-mail-fill text-primary me-2"></i>hello@email.com
                    </a>
                  </li>
                  <li>
                    <i class="ri-map-pin-fill text-primary me-2"></i>123 Longhorn Heights, Austin,
                    TX
                  </li>
                </ul>
              </div>

              <!-- Navigation Links -->
              <div class="col-lg-4 col-md-6">
                <div class="row">
                  <div class="col-6">
                    <h5 class="fs-5 mb-3">Quick Links</h5>
                    <ul class="list-unstyled">
                      <li>
                        <a href="/theme/2/home" class="text-body text-decoration-none d-block mb-2"
                          >Home</a
                        >
                      </li>
                      <li>
                        <a href="/theme/2/about" class="text-body text-decoration-none d-block mb-2"
                          >About</a
                        >
                      </li>
                      <li>
                        <a href="/theme/2/news" class="text-body text-decoration-none d-block mb-2"
                          >News</a
                        >
                      </li>
                      <li>
                        <a href="/theme/2/faq" class="text-body text-decoration-none d-block mb-2"
                          >FAQs</a
                        >
                      </li>
                      <li>
                        <a href="/theme/2/contact" class="text-body text-decoration-none d-block"
                          >Contact</a
                        >
                      </li>
                    </ul>
                  </div>
                  <div class="col-6">
                    <h5 class="fs-5 mb-3">Explore</h5>
                    <ul class="list-unstyled">
                      <li>
                        <a
                          href="/theme/2/amenities"
                          class="text-body text-decoration-none d-block mb-2">Amenities</a
                        >
                      </li>
                      <li>
                        <a
                          href="/theme/2/board-members"
                          class="text-body text-decoration-none d-block mb-2">Board</a
                        >
                      </li>
                      <li>
                        <a
                          href="/theme/2/events"
                          class="text-body text-decoration-none d-block mb-2">Events</a
                        >
                      </li>
                      <li>
                        <a
                          href="/theme/2/facilities"
                          class="text-body text-decoration-none d-block mb-2">Facilities</a
                        >
                      </li>
                      <li>
                        <a
                          href="/theme/2/gallery"
                          class="text-body text-decoration-none d-block mb-2">Gallery</a
                        >
                      </li>
                      <li>
                        <a href="/theme/2/history" class="text-body text-decoration-none d-block"
                          >History</a
                        >
                      </li>
                    </ul>
                  </div>
                </div>
              </div>

              <!-- Newsletter -->
              <div class="col-lg-4">
                <h5 class="fs-5 mb-2">Subscribe to our Newsletter</h5>
                <p class="text-muted mb-3">
                  Get community updates, event invites, and more—straight to your inbox.
                </p>
                <form>
                  <div class="mb-3">
                    <input
                      type="email"
                      class="form-control form-control-lg"
                      placeholder="Enter your email"
                      required
                    />
                  </div>
                  <button
                    type="submit"
                    class="btn btn-primary w-100 d-flex align-items-center justify-content-center"
                  >
                    <i class="ri-send-plane-fill me-2"></i>Subscribe
                  </button>
                </form>
              </div>
            </div>

            <!-- Footer Bottom -->
            <div class="text-center pt-4 mt-4 border-top">
              <p class="text-muted mb-0">&copy; 2025 Company, Inc. All rights reserved.</p>
            </div>
          </div>
        </footer>
      </div>

      <!-- All Scripts -->
      <Scripts />
    </main>
  </body>
</html>
