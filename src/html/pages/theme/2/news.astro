---
import Head from '../../../../html/layouts/front/partials/_head.astro'
import Scripts from '../../../../html/layouts/front/partials/_scripts.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <Head />
  </head>
  <body>
    <!-- Main Content -->
    <main>
      <!-- Page Content -->
      <div class="content-wrapper">
        <!-- Navbar -->
        <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-body shadow-sm z-3">
          <div class="container">
            <!-- Brand Logo or Text -->
            <a class="navbar-brand d-flex align-items-center" href="/theme/2/home">
              <img
                src="/dist/assets/img/placeholder-logos/logoipsum-334.svg"
                alt="Logo"
                class="me-2"
                style="height: 32px;"
              />
            </a>

            <!-- Offcanvas Toggler -->
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="offcanvas"
              data-bs-target="#offcanvasNavbar"
              aria-controls="offcanvasNavbar"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Offcanvas Menu -->
            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar">
              <div class="offcanvas-header">
                <a class="navbar-brand d-flex align-items-center" href="/theme/2/home">
                  <img
                    src="/dist/assets/img/placeholder-logos/logoipsum-334.svg"
                    alt="Logo"
                    class="me-2"
                    style="height: 32px;"
                  />
                </a>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="offcanvas"
                  aria-label="Close"></button>
              </div>
              <div class="offcanvas-body d-flex flex-column justify-content-between h-100">
                <ul class="navbar-nav navbar-underline justify-content-end">
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/2/home">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/2/about">About</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/2/amenities">Amenities</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/2/board-members">Board</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/2/events">Events</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/2/facilities">Facilities</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/2/faq">FAQs</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/2/gallery">Gallery</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/2/history">History</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/theme/2/news">News</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/2/contact">Contact</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </nav>

        <!-- Banner Section -->
        <section class="text-bg-primary py-5">
          <div class="container">
            <div class="row text-center text-md-start">
              <div class="col-lg-7">
                <h1 class="display-4 fw-semibold mb-2">News</h1>
                <p class="fs-4 mb-4">
                  Stay informed with the latest updates, announcements, and neighborhood happenings
                  at Longhorn Heights.
                </p>
                <div
                  class="d-flex justify-content-center justify-content-md-start flex-wrap gap-2 mb-2"
                >
                  <a href="#" class="btn btn-lg btn-light">
                    Explore Community<i class="ri-arrow-right-line ms-2"></i>
                  </a>
                  <a href="/theme/2/contact" class="btn btn-lg btn-outline-light">
                    Contact Us<i class="ri-arrow-right-line ms-2"></i>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- News Section -->
        <section class="bg-body py-5">
          <div class="container">
            <h2 class="fs-1 text-md-center mb-2">Community News</h2>
            <p class="lead text-md-center mb-4">
              Stay informed with the latest updates, announcements, and neighborhood happenings at
              Longhorn Heights.
            </p>

            <div class="row g-4">
              <!-- News Item 1 -->
              <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                <div class="card h-100 border p-0">
                  <img
                    src="/dist/assets/img/theme-images/img-4.jpg"
                    class="card-img-top img-fluid"
                    style="height: 200px; object-fit: cover;"
                    alt="News Image"
                  />
                  <div class="card-body p-3">
                    <a href="#" class="text-decoration-none text-body">
                      <h5 class="card-title fs-5">New Playground Installation Completed</h5>
                    </a>
                    <p class="text-muted mb-2">
                      <i class="ri-calendar-line me-1"></i>May 20, 2025 ·
                      <i class="ri-user-line ms-2 me-1"></i>By HOA Admin
                    </p>
                    <p class="card-text mb-2">
                      Our upgraded playground area is now open! It features new equipment, benches,
                      and shaded areas for families to enjoy.
                    </p>
                    <a href="#" class="link-primary text-decoration-none">Read More</a>
                  </div>
                </div>
              </div>
              <!-- News Item 2 -->
              <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                <div class="card h-100 border p-0">
                  <img
                    src="/dist/assets/img/theme-images/img-2.jpg"
                    class="card-img-top img-fluid"
                    style="height: 200px; object-fit: cover;"
                    alt="News Image"
                  />
                  <div class="card-body p-3">
                    <a href="#" class="text-decoration-none text-body">
                      <h5 class="card-title fs-5">Reminder: Pool Safety Guidelines</h5>
                    </a>
                    <p class="text-muted mb-2">
                      <i class="ri-calendar-line me-1"></i>May 10, 2025 ·
                      <i class="ri-user-line ms-2 me-1"></i>By Safety Committee
                    </p>
                    <p class="card-text mb-2">
                      As summer kicks off, please review the HOA’s pool safety rules to ensure a
                      safe and fun season for all.
                    </p>
                    <a href="#" class="link-primary text-decoration-none">Read More</a>
                  </div>
                </div>
              </div>
              <!-- News Item 3 -->
              <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                <div class="card h-100 border p-0">
                  <img
                    src="/dist/assets/img/theme-images/img-5.jpg"
                    class="card-img-top img-fluid"
                    style="height: 200px; object-fit: cover;"
                    alt="News Image"
                  />
                  <div class="card-body p-3">
                    <a href="#" class="text-decoration-none text-body">
                      <h5 class="card-title fs-5">New Jogging Path Now Open Along Greenbelt</h5>
                    </a>
                    <p class="text-muted mb-2">
                      <i class="ri-calendar-line me-1"></i>Apr 15, 2025 ·
                      <i class="ri-user-line ms-2 me-1"></i>By Emily Chen
                    </p>
                    <p class="card-text mb-2">
                      Residents can now enjoy a newly paved jogging and walking path that winds
                      through the Longhorn Heights greenbelt.
                    </p>
                    <a href="#" class="link-primary text-decoration-none">Read More</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Footer -->
        <footer class="bg-body border-top">
          <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-5 pt-5 pb-4">
              <div class="col mb-3">
                <a
                  href="/"
                  class="d-inline-flex align-items-center text-decoration-none mb-3"
                  aria-label="Your Company Logo"
                >
                  <img
                    src="/dist/assets/img/placeholder-logos/logoipsum-334.svg"
                    alt="Logo"
                    style="height: 32px;"
                    class="me-2"
                  />
                </a>
                <p class="text-body-secondary mb-3">
                  Stay connected with our community—subscribe to updates and never miss important
                  news or events!
                </p>
                <a href="/theme/2/contact" class="btn btn-lg btn-primary">Get in touch</a>
              </div>

              <div class="col mb-3"></div>

              <div class="col mb-3">
                <nav aria-label="Quick Links">
                  <h5 class="mb-3">Quick Links</h5>
                  <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                      <a href="/theme/2/home" class="nav-link p-0 text-body-secondary">Home</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/theme/2/about" class="nav-link p-0 text-body-secondary">About</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/theme/2/news" class="nav-link p-0 text-body-secondary">News</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/theme/2/faq" class="nav-link p-0 text-body-secondary">FAQs</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/theme/2/contact" class="nav-link p-0 text-body-secondary">Contact</a
                      >
                    </li>
                  </ul>
                </nav>
              </div>

              <div class="col mb-3">
                <nav aria-label="Legal">
                  <h5 class="mb-3">Legal</h5>
                  <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                      <a href="#" class="nav-link p-0 text-body-secondary">Terms of Use</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="#" class="nav-link p-0 text-body-secondary">Privacy Policy</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="#" class="nav-link p-0 text-body-secondary">Cookies Policy</a>
                    </li>
                  </ul>
                </nav>
              </div>

              <div class="col mb-3">
                <h5 class="mb-3">Contact</h5>
                <ul class="nav flex-column">
                  <li class="nav-item mb-2 text-body-secondary">
                    <i class="ri-phone-fill text-primary me-2"></i>
                    <a
                      href="tel:+12345678901"
                      class="text-body-secondary text-decoration-none text-break"
                      >+1 (234) 567-8901</a
                    >
                  </li>
                  <li class="nav-item mb-2 text-body-secondary">
                    <i class="ri-mail-fill text-primary me-2"></i>
                    <a
                      href="mailto:hello@email.com"
                      class="text-body-secondary text-decoration-none text-break">hello@email.com</a
                    >
                  </li>
                  <li class="nav-item mb-2 text-body-secondary">
                    <address class="text-body-secondary">
                      <i class="ri-map-pin-fill text-primary me-2"></i>
                      123 Longhorn Heights, Austin, TX
                    </address>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <div class="text-center text-bg-dark py-4">
            <p class="mb-0">© 2025 Company, Inc. All rights reserved.</p>
          </div>
        </footer>
      </div>

      <!-- All Scripts -->
      <Scripts />
    </main>
  </body>
</html>
