---
import Layout from './layout.astro'
import { getPathPrefix } from '../../../../utils/path.js'
---

<Layout
  title="Contact"
  description="A clean, responsive theme designed to help homeowners associations build a strong online presence."
>
  <!-- Banner Section -->
  <section class="text-bg-primary py-5">
    <div class="container">
      <div class="row text-center text-md-start">
        <div class="col-lg-7">
          <h1 class="display-4 fw-semibold mb-2">Contact Us</h1>
          <p class="fs-4 mb-4">
            We’d love to hear from you! Whether you have questions about us, or just want to say
            hello — we’re here to help and happy to chat.
          </p>
          <div class="d-flex justify-content-center justify-content-md-start flex-wrap gap-2 mb-2">
            <a href="#" class="btn btn-lg btn-light">
              Explore Community<i class="ri-arrow-right-line ms-2"></i>
            </a>
            <a href={getPathPrefix('/theme/2/contact')} class="btn btn-lg btn-outline-light">
              Contact Us<i class="ri-arrow-right-line ms-2"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Cards Section -->
  <section class="bg-body py-5">
    <div class="container">
      <h2 class="fs-1 text-md-center mb-2">Get in Touch</h2>
      <p class="lead text-md-center mb-4">
        Reach out to the right contact for HOA services, community management, or urgent maintenance
        support.
      </p>
      <div class="row g-4">
        <!-- HOA Office Contact -->
        <div class="col-md-4">
          <div class="card card-lift border h-100">
            <div class="card-body">
              <i class="ri-building-line text-primary fs-1"></i>
              <h5 class="card-title fs-5">HOA Office</h5>
              <p class="card-text">
                For general inquiries, community questions, or document requests.
              </p>
              <p class="text-muted mb-1">
                <i class="ri-phone-fill me-2"></i>
                <a href="tel:+12345678901" class="text-decoration-none text-muted"
                  >+1 (234) 567-8901</a
                >
              </p>
              <p class="text-muted mb-1">
                <i class="ri-mail-fill me-2"></i>
                <a href="mailto:hello@email.com" class="text-decoration-none text-muted"
                  >hello@email.com</a
                >
              </p>
              <p class="text-muted mb-0">
                <i class="ri-time-fill me-2"></i>Mon–Fri: 9:00 AM – 5:00 PM
              </p>
            </div>
          </div>
        </div>

        <!-- Management Company Contact -->
        <div class="col-md-4">
          <div class="card card-lift border h-100">
            <div class="card-body">
              <i class="ri-group-3-line text-primary fs-1"></i>
              <h5 class="card-title fs-5">Management Company</h5>
              <p class="card-text">
                For billing, assessments, or account assistance or management queries.
              </p>
              <p class="text-muted mb-1">
                <i class="ri-phone-fill me-2"></i>
                <a href="tel:+12345678901" class="text-decoration-none text-muted"
                  >+1 (234) 567-8901</a
                >
              </p>
              <p class="text-muted mb-1">
                <i class="ri-mail-fill me-2"></i>
                <a href="mailto:hello@email.com" class="text-decoration-none text-muted"
                  >hello@email.com</a
                >
              </p>
              <p class="text-muted mb-0">
                <i class="ri-time-fill me-2"></i>Mon–Fri: 8:00 AM – 6:00 PM
              </p>
            </div>
          </div>
        </div>

        <!-- Emergency Maintenance Contact -->
        <div class="col-md-4">
          <div class="card card-lift border h-100 border-danger">
            <div class="card-body">
              <i class="ri-hammer-line text-danger fs-1"></i>
              <h5 class="card-title fs-5 text-danger">Emergency Maintenance</h5>
              <p class="card-text">
                For urgent issues outside business hours (e.g., plumbing, power).
              </p>
              <p class="text-muted mb-1">
                <i class="ri-phone-fill me-2"></i>
                <a href="tel:+12345678901" class="text-decoration-none text-muted"
                  >+1 (234) 567-8901</a
                >
              </p>
              <p class="text-muted mb-1">
                <i class="ri-mail-fill me-2"></i>
                <a href="mailto:hello@email.com" class="text-decoration-none text-muted"
                  >hello@email.com</a
                >
              </p>
              <p class="text-muted mb-0">
                <i class="ri-time-fill me-2"></i>Available 24/7
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="bg-body pt-3 pb-5">
    <div class="container">
      <h2 class="fs-1 text-md-center mb-2">Send us a Message</h2>
      <p class="lead text-md-center mb-4">
        Whether you have a question, need support, or just want to say hello — we’re here for you.
      </p>
      <div class="row">
        <div class="col-lg-8 offset-lg-2">
          <div class="card border">
            <div class="card-body">
              <form>
                <div class="mb-3">
                  <label for="name" class="form-label">Your Name</label>
                  <input
                    type="text"
                    class="form-control form-control-lg"
                    id="name"
                    placeholder="Full Name"
                    required
                  />
                </div>

                <div class="mb-3">
                  <label for="email" class="form-label">Your Email</label>
                  <input
                    type="email"
                    class="form-control form-control-lg"
                    id="email"
                    placeholder="you@example.com"
                    required
                  />
                </div>

                <div class="mb-3">
                  <label for="phone" class="form-label">Phone Number (optional)</label>
                  <input
                    type="tel"
                    class="form-control form-control-lg"
                    id="phone"
                    placeholder="(123) 456-7890"
                  />
                </div>

                <div class="mb-3">
                  <label for="topic" class="form-label">Topic</label>
                  <select class="form-select form-select-lg" id="topic" required>
                    <option selected disabled value="">Select a topic</option>
                    <option value="amenities">Amenity Reservation</option>
                    <option value="maintenance">Maintenance Issue</option>
                    <option value="billing">Billing or Dues</option>
                    <option value="documents">Document Request</option>
                    <option value="general">General Inquiry</option>
                  </select>
                </div>

                <div class="mb-3">
                  <label for="message" class="form-label">Your Message</label>
                  <textarea
                    class="form-control form-control-lg"
                    id="message"
                    rows="5"
                    placeholder="Type your message here..."
                    required></textarea>
                </div>

                <div class="alert alert-primary d-flex align-items-center" role="alert">
                  <i class="ri-time-line me-2 fs-5 text-primary"></i>
                  <div>
                    Please note: Response times may vary depending on the nature of your request.
                    Most inquiries are answered within <strong>24–48 hours</strong>.
                  </div>
                </div>

                <div class="d-grid">
                  <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Board of Directors Contact Section -->
  <section class="bg-body pt-3 pb-5">
    <div class="container">
      <h2 class="fs-1 text-md-center mb-2">Board of Directors</h2>
      <p class="lead text-md-center mb-4">
        Get in touch with the dedicated residents who lead our community.
      </p>
      <div class="row g-4">
        <div class="col-md-6 col-lg-4">
          <div class="card card-lift border h-100 position-relative">
            <div class="card-body">
              <span
                class="position-absolute top-0 end-0 m-4 badge text-body bg-secondary-subtle border fs-6"
              >
                President
              </span>
              <h5 class="card-title fs-5 mb-3">Alex Ramirez</h5>
              <p class="card-text">
                Alex has lived in Longhorn Heights for over a decade and brings a strong background
                in leadership.
              </p>
              <p class="text-muted mb-1">
                <i class="ri-mail-fill me-2"></i>
                <a href="mailto:hello@email.com" class="text-muted text-decoration-none"
                  >hello@email.com</a
                >
              </p>
              <p class="text-muted mb-0">
                <i class="ri-phone-fill me-2"></i>
                <a href="tel:1234567890" class="text-muted text-decoration-none">(123) 456-7890</a>
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-4">
          <div class="card card-lift border h-100 position-relative">
            <div class="card-body">
              <span
                class="position-absolute top-0 end-0 m-4 badge text-body bg-secondary-subtle border fs-6"
              >
                Vice President
              </span>
              <h5 class="card-title fs-5 mb-3">Samantha Lee</h5>
              <p class="card-text">
                Samantha is passionate about neighborhood safety and sustainability initiatives in
                the Austin area.
              </p>
              <p class="text-muted mb-1">
                <i class="ri-mail-fill me-2"></i>
                <a href="mailto:hello@email.com" class="text-muted text-decoration-none"
                  >hello@email.com</a
                >
              </p>
              <p class="text-muted mb-0">
                <i class="ri-phone-fill me-2"></i>
                <a href="tel:1234567890" class="text-muted text-decoration-none">(123) 456-7890</a>
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-4">
          <div class="card card-lift border h-100 position-relative">
            <div class="card-body">
              <span
                class="position-absolute top-0 end-0 m-4 badge text-body bg-secondary-subtle border fs-6"
              >
                Treasurer
              </span>
              <h5 class="card-title fs-5 mb-3">Marcus Chen</h5>
              <p class="card-text">
                Marcus oversees the HOA’s finances and works to ensure responsible and transparent
                budgeting.
              </p>
              <p class="text-muted mb-1">
                <i class="ri-mail-fill me-2"></i>
                <a href="mailto:hello@email.com" class="text-muted text-decoration-none"
                  >hello@email.com</a
                >
              </p>
              <p class="text-muted mb-0">
                <i class="ri-phone-fill me-2"></i>
                <a href="tel:1234567890" class="text-muted text-decoration-none">(123) 456-7890</a>
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-4">
          <div class="card card-lift border h-100 position-relative">
            <div class="card-body">
              <span
                class="position-absolute top-0 end-0 m-4 badge text-body bg-secondary-subtle border fs-6"
              >
                Secretary
              </span>
              <h5 class="card-title fs-5 mb-3">Linda Patel</h5>
              <p class="card-text">
                Linda manages records and communication for the HOA, keeping residents informed and
                engaged.
              </p>
              <p class="text-muted mb-1">
                <i class="ri-mail-fill me-2"></i>
                <a href="mailto:hello@email.com" class="text-muted text-decoration-none"
                  >hello@email.com</a
                >
              </p>
              <p class="text-muted mb-0">
                <i class="ri-phone-fill me-2"></i>
                <a href="tel:1234567890" class="text-muted text-decoration-none">(123) 456-7890</a>
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-4">
          <div class="card card-lift border h-100 position-relative">
            <div class="card-body">
              <span
                class="position-absolute top-0 end-0 m-4 badge text-body bg-secondary-subtle border fs-6"
              >
                Management
              </span>
              <h5 class="card-title fs-5 mb-3">David Nguyen</h5>
              <p class="card-text">
                David helps coordinate neighborhood events and brings a fresh perspective to
                community projects.
              </p>
              <p class="text-muted mb-1">
                <i class="ri-mail-fill me-2"></i>
                <a href="mailto:hello@email.com" class="text-muted text-decoration-none"
                  >hello@email.com</a
                >
              </p>
              <p class="text-muted mb-0">
                <i class="ri-phone-fill me-2"></i>
                <a href="tel:1234567890" class="text-muted text-decoration-none">(123) 456-7890</a>
              </p>
            </div>
          </div>
        </div>
        <div class="col-md-6 col-lg-4">
          <div class="card card-lift border h-100 position-relative">
            <div class="card-body">
              <span
                class="position-absolute top-0 end-0 m-4 badge text-body bg-secondary-subtle border fs-6"
              >
                Management
              </span>
              <h5 class="card-title fs-5 mb-3">Rachel Kim</h5>
              <p class="card-text">
                Rachel serves as the bridge between residents and the board, focusing on outreach
                and inclusion.
              </p>
              <p class="text-muted mb-1">
                <i class="ri-mail-fill me-2"></i>
                <a href="mailto:hello@email.com" class="text-muted text-decoration-none"
                  >hello@email.com</a
                >
              </p>
              <p class="text-muted mb-0">
                <i class="ri-phone-fill me-2"></i>
                <a href="tel:1234567890" class="text-muted text-decoration-none">(123) 456-7890</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="bg-body pt-3 pb-5">
    <div class="container">
      <h2 class="fs-1 text-md-center mb-2">Visit Us</h2>
      <p class="lead text-md-center mb-4">Our location is easy to find and always welcoming.</p>
      <div class="row">
        <div class="col-lg-8 offset-lg-2">
          <div class="ratio ratio-16x9 rounded-4 border overflow-hidden">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6891.918314633661!2d-97.74639088460376!3d30.26674489620698!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8644b599a0cc032f%3A0x5d9b464bd469d57a!2sAustin%2C%20TX%2C%20USA!5e0!3m2!1sen!2sin!4v1748249504404!5m2!1sen!2sin"
