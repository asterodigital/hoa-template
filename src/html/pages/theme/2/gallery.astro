        <!-- Banner Section -->
        <section class="text-bg-primary py-5">
          <div class="container">
            <div class="row text-center text-md-start">
              <div class="col-lg-7">
                <h1 class="display-4 fw-semibold mb-2">Gallery</h1>
                <p class="fs-4 mb-4">
