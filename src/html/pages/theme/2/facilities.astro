---
import Layout from './layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout
  title="Facilities"
  description="A clean, responsive theme designed to help homeowners associations build a strong online presence."
>
  <!-- Banner Section -->
  <section class="text-bg-primary py-5">
    <div class="container">
      <div class="row text-center text-md-start">
        <div class="col-lg-7">
          <h1 class="display-4 fw-semibold mb-2">Facilities</h1>
          <p class="fs-4 mb-4">
            Discover the essential facilities that support everyday living and keep Longhorn Heights
            running smoothly and efficiently.
          </p>
          <div class="d-flex justify-content-center justify-content-md-start flex-wrap gap-2 mb-2">
            <a href="#" class="btn btn-lg btn-light">
              Explore Community<i class="ri-arrow-right-line ms-2"></i>
            </a>
            <a href={getPathPrefix('/theme/2/contact')} class="btn btn-lg btn-outline-light">
              Contact Us<i class="ri-arrow-right-line ms-2"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Facilities Section -->
  <section class="bg-body py-5">
    <div class="container">
      <h2 class="fs-1 text-md-center mb-2">Essential Facilities</h2>
      <p class="lead text-md-center mb-4">
        Discover the essential facilities that support everyday living and keep Longhorn Heights
        running smoothly and efficiently.
      </p>
      <div class="row g-4">
        <div class="col-lg-4">
          <div class="card card-expand border p-0">
            <figure class="mb-0">
              <img
                src={getAssetPrefix('/assets/img/theme-images/img-1.jpg')}
                class="card-img-top"
                alt="Facility Image"
              />
            </figure>
            <div class="card-body p-3">
              <h5 class="card-title fs-5">
                <i class="ri-home-heart-fill text-primary me-2"></i>Reliable Utilities
              </h5>
              <span class="badge text-body bg-secondary-subtle border fs-6 mb-2">Utilities</span>
              <p class="card-text">
                Consistent electricity, water, and waste management services keep your home
                comfortable and functional.
              </p>
            </div>
          </div>
        </div>

        <div class="col-lg-4">
          <div class="card card-expand border p-0">
            <figure class="mb-0">
              <img
                src={getAssetPrefix('/assets/img/theme-images/img-8.jpg')}
                class="card-img-top"
                alt="Facility Image"
              />
            </figure>
            <div class="card-body p-3">
              <h5 class="card-title fs-5">
                <i class="ri-lock-fill text-primary me-2"></i>Security & Surveillance
              </h5>
              <span class="badge text-body bg-secondary-subtle border fs-6 mb-2">Security</span>
              <p class="card-text">
                24/7 gated security, patrols, and surveillance cameras help maintain a safe living
                environment for all residents.
              </p>
            </div>
          </div>
        </div>

        <div class="col-lg-4">
          <div class="card card-expand border p-0">
            <figure class="mb-0">
              <img
                src={getAssetPrefix('/assets/img/theme-images/img-9.jpg')}
                class="card-img-top"
                alt="Facility Image"
              />
            </figure>
            <div class="card-body p-3">
              <h5 class="card-title fs-5">
                <i class="ri-car-fill text-primary me-2"></i>Parking & Transportation
              </h5>
              <span class="badge text-body bg-secondary-subtle border fs-6 mb-2">Parking</span>
              <p class="card-text">
                Well-maintained visitor parking, bike racks, and easy access to public
                transportation routes.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Facility Details Section -->
  <section class="bg-body pt-3 pb-5">
    <div class="container">
      <!-- Tabs -->
      <ul
        class="nav nav-pills nav-fill flex-wrap justify-content-center gap-3 mb-3"
        id="facilityTabs"
        role="tablist"
      >
        <li class="nav-item" role="presentation">
          <button
            class="nav-link nav-link-lg active border"
            id="utilities-tab"
            data-bs-toggle="tab"
            data-bs-target="#utilities"
            type="button"
            role="tab">Reliable Utilities</button
          >
        </li>
        <li class="nav-item" role="presentation">
          <button
            class="nav-link nav-link-lg border"
            id="security-tab"
            data-bs-toggle="tab"
            data-bs-target="#security"
            type="button"
            role="tab">Security & Surveillance</button
          >
        </li>
        <li class="nav-item" role="presentation">
          <button
            class="nav-link nav-link-lg border"
            id="parking-tab"
            data-bs-toggle="tab"
            data-bs-target="#parking"
            type="button"
            role="tab">Parking & Transportation</button
          >
        </li>
      </ul>

      <!-- Tab Content -->
      <div class="tab-content border rounded-4 p-4">
        <!-- Tab Pane 1 -->
        <div class="tab-pane fade show active" id="utilities" role="tabpanel">
          <div class="row g-4">
            <div class="col-md-6 ps-xl-3">
              <h3>Reliable Utilities</h3>
              <p>
                Consistent electricity, water, and waste management services keep your home
                comfortable and functional.
              </p>
              <ul class="list-unstyled mb-0">
                <li>
                  <i class="ri-check-line text-success me-2"></i>Consistent Electricity
                </li>
                <li>
                  <i class="ri-check-line text-success me-2"></i>Waste Management
                </li>
                <li>
                  <i class="ri-check-line text-success me-2"></i>Constant Water Supply
                </li>
                <li>
                  <i class="ri-check-line text-success me-2"></i>Essential Goods
                </li>
              </ul>
            </div>
            <div class="col-md-6">
              <img
                src={getAssetPrefix('/assets/img/theme-images/img-1.jpg')}
                alt="Facility Image"
                style="max-height: 300px; width: 100%; object-fit:cover;"
                class="img-fluid rounded"
              />
            </div>
          </div>
        </div>

        <!-- Tab Pane 2 -->
        <div class="tab-pane fade" id="security" role="tabpanel">
          <div class="row g-4">
            <div class="col-md-6 ps-xl-3">
              <h3>Security & Surveillance</h3>
              <p>
                24/7 gated security, patrols, and surveillance cameras help maintain a safe living
                environment for all residents.
              </p>
              <ul class="list-unstyled mb-0">
                <li>
                  <i class="ri-check-line text-success me-2"></i>24/7 Security
                </li>
                <li>
                  <i class="ri-check-line text-success me-2"></i>Regular Patrols
                </li>
                <li>
                  <i class="ri-check-line text-success me-2"></i>Trained Personnel
                </li>
                <li>
                  <i class="ri-check-line text-success me-2"></i>Surveillance Cameras
                </li>
              </ul>
            </div>
            <div class="col-md-6">
              <img
                src={getAssetPrefix('/assets/img/theme-images/img-8.jpg')}
                alt="Facility Image"
                style="max-height: 300px; width: 100%; object-fit:cover;"
                class="img-fluid rounded"
              />
            </div>
          </div>
        </div>

        <!-- Tab Pane 3 -->
        <div class="tab-pane fade" id="parking" role="tabpanel">
          <div class="row g-4">
            <div class="col-md-6 ps-xl-3">
              <h3>Parking & Transportation</h3>
              <p>
                Well-maintained visitor parking, bike racks, and easy access to public
                transportation routes.
              </p>
              <ul class="list-unstyled mb-0">
                <li>
                  <i class="ri-check-line text-success me-2"></i>Easy Access to Routes
                </li>
                <li>
                  <i class="ri-check-line text-success me-2"></i>Safe Walkways
                </li>
                <li>
                  <i class="ri-check-line text-success me-2"></i>Visitor Parking
                </li>
                <li>
                  <i class="ri-check-line text-success me-2"></i>Bike Racks
                </li>
              </ul>
            </div>
            <div class="col-md-6">
              <img
                src={getAssetPrefix('/assets/img/theme-images/img-9.jpg')}
                alt="Facility Image"
                style="max-height: 300px; width: 100%; object-fit:cover;"
                class="img-fluid rounded mb-0"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Need Help Section -->
  <section class="bg-body pt-3 pb-5">
    <div class="container text-center">
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <h2 class="fs-1 mb-3">Need Help?</h2>
          <p class="lead mb-4">
            Questions about facility access, reservations, or maintenance? We're here to assist you.
            Get in touch with the Longhorn Heights support team or explore our FAQ section for quick
            answers.
          </p>
          <a href={getPathPrefix('/theme/2/contact')} class="btn btn-lg btn-primary"
            >Contact Support</a
          >
        </div>
      </div>
    </div>
  </section>
</Layout>
