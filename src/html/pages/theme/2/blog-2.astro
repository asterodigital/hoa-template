---
import Layout from './layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout
  title="Blog - Left Sidebar"
  description="A clean, responsive theme designed to help homeowners associations build a strong online presence."
>
  <!-- Blogs Section -->
  <section class="bg-body py-5">
    <div class="container">
      <h1 class="fs-1 text-center mb-4" data-aos="fade-down" data-aos-duration="800">
        Read our latest articles and tips
      </h1>
      <div class="row gy-4">
        <!-- Sidebar Column -->
        <div class="col-lg-3">
          <div class="sticky-top z-1" style="top: 80px;">
            <!-- Search Card -->
            <div class="card border p-3 mb-4" data-aos="fade-right" data-aos-duration="800">
              <div class="card-body">
                <h5 class="card-title mb-3">
                  <i class="ri-search-line me-2"></i>Search Blog Posts
                </h5>
                <form>
                  <div class="mb-3">
                    <input
                      type="text"
                      class="form-control form-control-lg"
                      placeholder="Search topics, titles..."
                    />
                  </div>
                  <button type="submit" class="btn btn-lg btn-primary w-100">Search</button>
                </form>
              </div>
            </div>

            <!-- Tags Card -->
            <div class="card border p-3 mb-4" data-aos="fade-right" data-aos-duration="800">
              <div class="card-body">
                <h5 class="card-title mb-3">
                  <i class="ri-price-tag-3-line me-2"></i>Browse by Tags
                </h5>
                <div class="d-flex flex-wrap gap-2">
                  <a href="#" class="badge text-body bg-primary-subtle fs-6 text-decoration-none"
                    >Informational</a
                  >
                  <a href="#" class="badge text-body bg-primary-subtle fs-6 text-decoration-none"
                    >Landscaping</a
                  >
                  <a href="#" class="badge text-body bg-primary-subtle fs-6 text-decoration-none"
                    >Amenities</a
                  >
                </div>
              </div>
            </div>

            <!-- Recent Posts Card -->
            <div class="card border p-3" data-aos="fade-right" data-aos-duration="800">
              <div class="card-body">
                <h5 class="card-title mb-3">
                  <i class="ri-history-line me-2"></i>Recent Posts
                </h5>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item px-0">
                    <a href="#" class="text-body text-decoration-none fw-semibold d-block mb-1">
                      Spring Landscaping Tips for a Greener Neighborhood
                    </a>
                    <p class="mb-2">
                      12 Jan 2025 • <span class="badge text-body bg-primary-subtle fs-6"
                        >Landscaping</span
                      >
                    </p>
                  </li>
                  <li class="list-group-item px-0">
                    <a href="#" class="text-body text-decoration-none fw-semibold d-block mb-1">
                      Pool Reopening Schedule and New Rules for Summer
                    </a>
                    <p class="mb-2">
                      20 Feb 2025 • <span class="badge text-body bg-primary-subtle fs-6"
                        >Amenities</span
                      >
                    </p>
                  </li>
                  <li class="list-group-item px-0">
                    <a href="#" class="text-body text-decoration-none fw-semibold d-block mb-1">
                      How to Submit a Maintenance Request the Right Way
                    </a>
                    <p class="mb-2">
                      6 Jan 2025 • <span class="badge text-body bg-primary-subtle fs-6"
                        >Informational</span
                      >
                    </p>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-9">
          <div class="card border p-0 mb-4" data-aos="fade-in" data-aos-duration="800">
            <img
              src={getAssetPrefix('/assets/img/theme-images/img-3.jpg')}
              class="card-img-top"
              style="max-height: 400px; object-fit: cover;"
              alt="blog image"
            />
            <div class="card-body p-3">
              <div class="d-flex align-items-center justify-content-between mb-2">
                <span class="badge text-body bg-primary-subtle fs-6">Landscaping</span>
                <span class="d-flex gap-3 text-muted">
                  <a href="#" class="text-decoration-none text-muted">
                    <i class="ri-user-line me-1"></i>James Mitchell
                  </a>
                  <span><i class="ri-calendar-line me-1"></i>12 Jan 2025</span>
                </span>
              </div>
              <h5 class="card-title fs-4 mb-2">
                <a href={getPathPrefix('/theme/2/post-2')} class="text-decoration-none text-body">
                  Spring Landscaping Tips for a Greener Neighborhood
                </a>
              </h5>
              <p class="text-muted mb-2">
                Easy ways to refresh your yard and boost curb appeal this spring.
              </p>
              <a href={getPathPrefix('/theme/2/post-2')} class="text-decoration-none text-body mb-0"
                >Read more <i class="ri-arrow-right-line"></i></a
              >
            </div>
          </div>
          <div class="card border p-0 mb-4" data-aos="fade-in" data-aos-duration="800">
            <img
              src={getAssetPrefix('/assets/img/theme-images/img-2.jpg')}
              class="card-img-top"
              style="max-height: 400px; object-fit: cover;"
              alt="blog image"
            />
            <div class="card-body p-3">
              <div class="d-flex align-items-center justify-content-between mb-2">
                <span class="badge text-body bg-primary-subtle fs-6">Amenities</span>
                <span class="d-flex gap-3 text-muted">
                  <a href="#" class="text-decoration-none text-muted">
                    <i class="ri-user-line me-1"></i>James Mitchell
                  </a>
                  <span><i class="ri-calendar-line me-1"></i>20 Feb 2025</span>
                </span>
              </div>
              <h5 class="card-title fs-4 mb-2">
                <a href="#" class="text-decoration-none text-body">
                  Pool Reopening Schedule and New Rules for Summer
                </a>
              </h5>
              <p class="text-muted mb-2">
                Everything you need to know about the pool's reopening and updated guidelines.
              </p>
              <a href="#" class="text-decoration-none text-body mb-0"
                >Read more <i class="ri-arrow-right-line"></i></a
              >
            </div>
          </div>
          <div class="card border p-0" data-aos="fade-in" data-aos-duration="800">
            <img
              src={getAssetPrefix('/assets/img/theme-images/img-1.jpg')}
              class="card-img-top"
              style="max-height: 400px; object-fit: cover;"
              alt="blog image"
            />
            <div class="card-body p-3">
              <div class="d-flex align-items-center justify-content-between mb-2">
                <span class="badge text-body bg-primary-subtle fs-6">Informational</span>
                <span class="d-flex gap-3 text-muted">
                  <a href="#" class="text-decoration-none text-muted">
                    <i class="ri-user-line me-1"></i>James Mitchell
                  </a>
                  <span><i class="ri-calendar-line me-1"></i>6 Jan 2025</span>
                </span>
              </div>
              <h5 class="card-title fs-4 mb-2">
                <a href="#" class="text-decoration-none text-body">
                  How to Submit a Maintenance Request the Right Way
                </a>
              </h5>
              <p class="text-muted mb-2">
                A step-by-step guide to getting common area issues resolved quickly.
              </p>
              <a href="#" class="text-decoration-none text-body mb-0"
                >Read more <i class="ri-arrow-right-line"></i></a
              >
            </div>
          </div>

          <!-- Pagination -->
          <nav class="mt-5 d-flex justify-content-center" aria-label="Pagination">
            <ul class="pagination pagination-lg z-1">
              <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
              <li class="page-item active"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="text-bg-primary py-5">
    <div class="container text-center">
      <!-- Heading and Intro -->
      <h2 class="fs-1 mb-2" data-aos="fade-up" data-aos-duration="800">Stay Connected</h2>
      <p class="mb-4" data-aos="fade-up" data-aos-delay="100" data-aos-duration="800">
        Sign up for updates about community news, upcoming events, and important HOA announcements.
      </p>
      <div class="row">
        <div class="col-lg-8 offset-lg-2">
          <!-- Form -->
          <form
            class="row g-4 justify-content-center"
            data-aos="fade-up"
            data-aos-delay="200"
            data-aos-duration="1000"
          >
            <!-- Name Field -->
            <div class="col-12 col-md-6">
              <input
                type="text"
                class="form-control form-control-lg"
                placeholder="Your Name"
                required
              />
            </div>
            <!-- Phone Field -->
            <div class="col-12 col-md-6">
              <input
                type="tel"
                class="form-control form-control-lg"
                placeholder="Phone Number"
                pattern="[0-9\-+()\s]{7,15}"
                required
              />
            </div>
            <!-- Email Field -->
            <div class="col-12">
              <input
                type="email"
                class="form-control form-control-lg"
                placeholder="Email Address"
                required
              />
            </div>
            <!-- Submit Button -->
            <div class="col-12 col-md-auto">
              <button type="submit" class="btn btn-lg btn-dark w-100">
                Subscribe<i class="ri-arrow-right-line ms-2"></i>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>
