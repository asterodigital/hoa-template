---
import Layout from './layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout
  title="News"
  description="A clean, responsive theme designed to help homeowners associations build a strong online presence."
>
  <!-- Hero Section -->
  <section
    class="position-relative text-light text-center text-lg-start"
    style={`background-image: url('${getAssetPrefix('/assets/img/theme-images/hero-3.jpg')}'); background-size: cover; background-position: center; height: 400px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
    <!-- Content -->
    <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
      <div class="row">
        <div class="col-lg-8 offset-lg-2 col-xl-6 offset-xl-3">
          <h1 class="display-2 fw-semibold lh-1 mb-2" data-aos="fade-up" data-aos-duration="1000">
            News
          </h1>
          <p class="fs-4 mb-3" data-aos="fade-up" data-aos-delay="200" data-aos-duration="1000">
            Stay informed with the latest updates, announcements, and neighborhood happenings at
            Longhorn Heights.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Marquee Section -->
  <section class="marquee-wrapper bg-primary py-3">
    <div class="container-fluid overflow-hidden">
      <div class="marquee fs-3 d-flex">
        <!-- Original + Duplicate content inside -->
        <div class="marquee-track d-flex">
          <div class="marquee-content text-light me-3">
            Next HOA Meeting: Tuesday, June 18 at 6:00 PM — Clubhouse
          </div>
          <div class="marquee-content text-light opacity-50 me-3">
            <i class="ri-shining-2-fill"></i>
          </div>
          <div class="marquee-content text-light me-3">Community Gardening Day this Saturday!</div>
          <div class="marquee-content text-light opacity-50 me-3">
            <i class="ri-shining-2-fill"></i>
          </div>
          <div class="marquee-content text-light me-3">
            Trail maintenance scheduled for June 10–12 — please use alternate routes
          </div>
          <div class="marquee-content text-light opacity-50 me-3">
            <i class="ri-shining-2-fill"></i>
          </div>
          <!-- Duplicate content for seamless loop -->
          <div class="marquee-content text-light me-3">
            Next HOA Meeting: Tuesday, June 18 at 6:00 PM — Clubhouse
          </div>
          <div class="marquee-content text-light opacity-50 me-3">
            <i class="ri-shining-2-fill"></i>
          </div>
          <div class="marquee-content text-light me-3">Community Gardening Day this Saturday!</div>
          <div class="marquee-content text-light opacity-50 me-3">
            <i class="ri-shining-2-fill"></i>
          </div>
          <div class="marquee-content text-light me-3">
            Trail maintenance scheduled for June 10–12 — please use alternate routes
          </div>
          <div class="marquee-content text-light opacity-50 me-3">
            <i class="ri-shining-2-fill"></i>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- News Section -->
  <section class="bg-body py-5">
    <div class="container">
      <h3 class="fs-1 text-md-center mb-4" data-aos="fade-up" data-aos-duration="800">
        Community News
      </h3>
      <div class="row g-4">
        <div class="col-lg-4">
          <div
            class="card h-100 border p-0"
            data-aos="flip-up"
            data-aos-delay="100"
            data-aos-duration="600"
          >
            <img
              src={getAssetPrefix('/assets/img/theme-images/img-4.jpg')}
              class="card-img-top img-fluid"
              style="height: 200px; object-fit: cover;"
              alt="News Image"
            />
            <div class="card-body p-3">
              <a href="#" class="text-decoration-none text-body">
                <h5 class="card-title fs-5">Playground Installation Completed</h5>
              </a>
              <p class="text-muted mb-2">
                <i class="ri-calendar-line me-1"></i>May 20, 2025 ·
                <i class="ri-user-line ms-2 me-1"></i>By HOA Admin
              </p>
              <p class="card-text mb-2">
                Our upgraded playground area is now open! It features new equipment, benches, and
                shaded areas for families to enjoy.
              </p>
              <a href="#" class="link-primary text-decoration-none">Read More</a>
            </div>
          </div>
        </div>
        <div class="col-lg-4">
          <div
            class="card h-100 border p-0"
            data-aos="flip-up"
            data-aos-delay="200"
            data-aos-duration="600"
          >
            <img
              src={getAssetPrefix('/assets/img/theme-images/img-2.jpg')}
              class="card-img-top img-fluid"
              style="height: 200px; object-fit: cover;"
              alt="News Image"
            />
            <div class="card-body p-3">
              <a href="#" class="text-decoration-none text-body">
                <h5 class="card-title fs-5">Reminder: Pool Safety Guidelines</h5>
              </a>
              <p class="text-muted mb-2">
                <i class="ri-calendar-line me-1"></i>May 10, 2025 ·
                <i class="ri-user-line ms-2 me-1"></i>By Safety Committee
              </p>
              <p class="card-text mb-2">
                As summer kicks off, please make sure to review the HOA's pool safety rules to
                ensure a safe and fun season for everyone.
              </p>
              <a href="#" class="link-primary text-decoration-none">Read More</a>
            </div>
          </div>
        </div>
        <div class="col-lg-4">
          <div
            class="card h-100 border p-0"
            data-aos="flip-up"
            data-aos-delay="300"
            data-aos-duration="600"
          >
            <img
              src={getAssetPrefix('/assets/img/theme-images/img-5.jpg')}
              class="card-img-top img-fluid"
              style="height: 200px; object-fit: cover;"
              alt="News Image"
            />
            <div class="card-body p-3">
              <a href="#" class="text-decoration-none text-body">
                <h5 class="card-title fs-5">New Jogging Path Now Open</h5>
              </a>
              <p class="text-muted mb-2">
                <i class="ri-calendar-line me-1"></i>Apr 15, 2025 ·
                <i class="ri-user-line ms-2 me-1"></i>By Emily Chen
              </p>
              <p class="card-text mb-2">
                Residents can now enjoy a newly paved jogging and walking path that winds through
                the Longhorn Heights greenbelt.
              </p>
              <a href="#" class="link-primary text-decoration-none">Read More</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="text-bg-primary py-5">
    <div class="container" data-aos="fade-up" data-aos-duration="800">
      <h2 class="mb-3">Stay Connected with Your Community</h2>
      <p class="fs-5 mb-4">
        Have questions, concerns, or suggestions? Reach out to Longhorn Heights HOA board — we're
        here to help.
      </p>
      <a
        href={getPathPrefix('/theme/3/contact')}
        class="btn btn-lg btn-outline-light rounded-pill px-4"
      >
        Get in Touch<i class="ri-arrow-right-line ms-2"></i>
      </a>
    </div>
  </section>
</Layout>
