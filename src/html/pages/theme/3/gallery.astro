  </section>

  <!-- Image Modal -->
  <div class="modal fade" id="imageModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content bg-transparent border-0">
        <div class="modal-body p-0">
          <img id="modalImage" src="" class="img-fluid rounded-4 w-100" alt="Full Size Image" />
        </div>
      </div>
    </div>
  </div>

  <!-- Submit Your Photo Section -->
  <section class="bg-body pt-2 pb-5">
    <div class="container">
      <h2 class="fs-1 text-md-center mb-4" data-aos="fade-up" data-aos-duration="800">
        Submit Your Photo
      </h2>
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div
            class="p-4 border rounded-4"
            data-aos="fade-up"
            data-aos-delay="200"
            data-aos-duration="800"
          >
            <p class="mb-4 text-md-center">
              Captured a great moment in <strong>Longhorn Heights</strong>? Share it with us and
              help showcase the spirit of our community!
            </p>
            <form>
              <div class="mb-3">
                <label for="name" class="form-label">Your Name</label>
                <input
                  type="text"
                  class="form-control form-control-lg"
                  id="name"
                  placeholder="Jane Doe"
                />
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Your Email</label>
                <input
                  type="email"
                  class="form-control form-control-lg"
                  id="email"
                  placeholder="you@example.com"
                />
              </div>
              <div class="mb-3">
                <label for="photo" class="form-label">Upload Photo</label>
                <input
                  class="form-control form-control-lg"
                  type="file"
                  id="photo"
                  accept="image/*"
                />
              </div>
              <div class="mb-3">
                <label for="caption" class="form-label">Photo Caption (Optional)</label>
                <textarea
                  class="form-control form-control-lg"
                  id="caption"
                  rows="3"
                  placeholder="E.g., Community BBQ – June 2025"></textarea>
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-lg btn-primary rounded-pill px-4"
                  >Submit Photo</button
                >
              </div>
            </form>
            <p class="text-muted text-center small mt-3">
              By submitting, you grant Longhorn Heights HOA permission to use your photo on this
              site and in community publications.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="text-bg-primary py-5">
    <div class="container" data-aos="fade-up" data-aos-duration="800">
      <h2 class="mb-3">Stay Connected with Your Community</h2>
      <p class="fs-5 mb-4">
        Have questions, concerns, or suggestions? Reach out to Longhorn Heights HOA board — we're
        here to help.
      </p>
      <a
        href={getPathPrefix('/theme/3/contact')}
        class="btn btn-lg btn-outline-light rounded-pill px-4"
      >
        Get in Touch<i class="ri-arrow-right-line ms-2"></i>
      </a>
    </div>
  </section>
</Layout>
