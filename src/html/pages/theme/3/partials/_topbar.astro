            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/3/blog-3' ? ' active' : ''}`}
                href={getPathPrefix('/theme/3/blog-3')}>Blog – 3</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/3/post-1' ? ' active' : ''}`}
                href={getPathPrefix('/theme/3/post-1')}>Blog Post – 1</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/3/post-2' ? ' active' : ''}`}
                href={getPathPrefix('/theme/3/post-2')}>Blog Post – 2</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/3/post-3' ? ' active' : ''}`}
                href={getPathPrefix('/theme/3/post-3')}>Blog Post – 3</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/3/events' ? ' active' : ''}`}
                href={getPathPrefix('/theme/3/events')}>Events</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/3/facilities' ? ' active' : ''}`}
                href={getPathPrefix('/theme/3/facilities')}>Facilities</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/3/faq' ? ' active' : ''}`}
                href={getPathPrefix('/theme/3/faq')}>FAQs</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/3/gallery' ? ' active' : ''}`}
                href={getPathPrefix('/theme/3/gallery')}>Gallery</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/3/history' ? ' active' : ''}`}
                href={getPathPrefix('/theme/3/history')}>History</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/3/news' ? ' active' : ''}`}
                href={getPathPrefix('/theme/3/news')}>News</a
              >
            </li>
            <li class="nav-item">
              <a
                class={`nav-link${currentPath === '/theme/3/contact' ? ' active' : ''}`}
                href={getPathPrefix('/theme/3/contact')}>Contact</a
              >
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
