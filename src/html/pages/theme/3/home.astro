---
import Head from '../../../../html/layouts/front/partials/_head.astro'
import Scripts from '../../../../html/layouts/front/partials/_scripts.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <Head />
  </head>
  <body>
    <!-- Main Content -->
    <main>
      <!-- Page Content -->
      <div class="content-wrapper">
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-body shadow-sm sticky-top z-3">
          <div class="container">
            <!-- Brand Logo or Text -->
            <a class="navbar-brand d-flex align-items-center" href="/theme/3/home">
              <img
                src="/dist/assets/img/placeholder-logos/logoipsum-334.svg"
                alt="Logo"
                class="me-2"
                style="height: 32px;"
              />
            </a>

            <!-- Offcanvas Toggler -->
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="offcanvas"
              data-bs-target="#offcanvasNavbar"
              aria-controls="offcanvasNavbar"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Offcanvas Menu -->
            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar">
              <div class="offcanvas-header">
                <a class="navbar-brand d-flex align-items-center" href="/theme/3/home">
                  <img
                    src="/dist/assets/img/placeholder-logos/logoipsum-334.svg"
                    alt="Logo"
                    class="me-2"
                    style="height: 32px;"
                  />
                </a>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="offcanvas"
                  aria-label="Close"></button>
              </div>
              <div class="offcanvas-body d-flex flex-column justify-content-between h-100">
                <ul class="navbar-nav navbar-underline justify-content-end">
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/theme/3/home">Home</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/3/about">About</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/3/amenities">Amenities</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/3/board-members">Board</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/3/events">Events</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/3/facilities">Facilities</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/3/faq">FAQs</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/3/gallery">Gallery</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/3/history">History</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/3/news">News</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/3/contact">Contact</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </nav>

        <!-- Hero Section -->
        <section
          class="position-relative text-light text-center text-lg-start"
          style="background-image: url('/dist/assets/img/theme-images/hero-3.jpg'); background-size: cover; background-position: center; height: 600px;"
        >
          <!-- Overlay -->
          <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
          <!-- Content -->
          <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
            <div class="row">
              <div class="col-lg-8 offset-lg-2 col-xl-6 offset-xl-3">
                <h1 class="display-2 fw-semibold lh-1 mb-2">Welcome to <br />Longhorn Heights</h1>
                <p class="fs-4 mb-3">A thriving community in the heart of Austin</p>
                <button class="btn btn-lg btn-outline-light rounded-pill px-4"
                  >Explore<i class="ri-arrow-right-line ms-2"></i></button
                >
              </div>
            </div>
          </div>
        </section>

        <!-- Quick Links Section -->
        <section class="bg-body py-5">
          <div class="container">
            <h2 class="fs-1 text-center mb-4">Quick Links</h2>
            <div class="row g-4">
              <div class="col-sm-6 col-lg-3">
                <a href="#" class="text-decoration-none">
                  <div
                    class="card card-hover border d-flex flex-row align-items-center gap-3 h-100"
                  >
                    <div class="text-primary fs-1">
                      <i class="ri-currency-line"></i>
                    </div>
                    <div class="flex-grow-1">
                      <h6 class="text-body fs-5 mb-1">Pay Dues</h6>
                      <p class="text-muted mb-0">Submit HOA payments</p>
                    </div>
                  </div>
                </a>
              </div>
              <div class="col-sm-6 col-lg-3">
                <a href="#" class="text-decoration-none">
                  <div
                    class="card card-hover border d-flex flex-row align-items-center gap-3 h-100"
                  >
                    <div class="text-primary fs-1">
                      <i class="ri-reserved-line"></i>
                    </div>
                    <div class="flex-grow-1">
                      <h6 class="text-body fs-5 mb-1">Reserve Amenities</h6>
                      <p class="text-muted mb-0">Book pools, courts & more</p>
                    </div>
                  </div>
                </a>
              </div>
              <div class="col-sm-6 col-lg-3">
                <a href="#" class="text-decoration-none">
                  <div
                    class="card card-hover border d-flex flex-row align-items-center gap-3 h-100"
                  >
                    <div class="text-primary fs-1">
                      <i class="ri-folder-2-line"></i>
                    </div>
                    <div class="flex-grow-1">
                      <h6 class="text-body fs-5 mb-1">Documents</h6>
                      <p class="text-muted mb-0">Access HOA forms and rules</p>
                    </div>
                  </div>
                </a>
              </div>
              <div class="col-sm-6 col-lg-3">
                <a href="#" class="text-decoration-none">
                  <div
                    class="card card-hover border d-flex flex-row align-items-center gap-3 h-100"
                  >
                    <div class="text-primary fs-1">
                      <i class="ri-error-warning-line"></i>
                    </div>
                    <div class="flex-grow-1">
                      <h6 class="text-body fs-5 mb-1">Report an Issue</h6>
                      <p class="text-muted mb-0">Safety or other concerns</p>
                    </div>
                  </div>
                </a>
              </div>
            </div>
          </div>
        </section>

        <!-- News Section -->
        <section class="bg-body pt-3 pb-5">
          <div class="container">
            <!-- Heading Row -->
            <div
              class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-3 mb-4"
            >
              <h2 class="fs-1 mb-0">Latest News &amp; Announcements</h2>
              <a href="/theme/3/news" class="btn btn-lg btn-outline-primary rounded-pill px-4"
                >View All<i class="ri-arrow-right-line ms-2"></i></a
              >
            </div>
            <!-- News Cards -->
            <div class="row g-4">
              <!-- Card 1 -->
              <div class="col-lg-4">
                <div class="card card-lift border position-relative h-100">
                  <span class="badge text-bg-danger position-absolute fs-6 top-0 end-0 m-4"
                    >Urgent</span
                  >
                  <div class="card-body">
                    <h5 class="card-title fs-5">Water Outage</h5>
                    <p class="text-muted mb-2">May 30, 2025</p>
                    <p class="card-text mb-2">
                      Please be advised that there will be a scheduled water outage on Thursday from
                      9 AM to 3 PM for routine maintenance.
                    </p>
                    <a href="#" class="text-decoration-none"
                      >Read more<i class="ri-arrow-right-line ms-2"></i></a
                    >
                  </div>
                </div>
              </div>
              <!-- Card 2 -->
              <div class="col-lg-4">
                <div class="card card-lift border position-relative h-100">
                  <span class="badge text-bg-warning position-absolute fs-6 top-0 end-0 m-4"
                    >Important</span
                  >
                  <div class="card-body">
                    <h5 class="card-title fs-5">Meeting Reminder</h5>
                    <p class="text-muted mb-2">May 28, 2025</p>
                    <p class="card-text mb-2">
                      Don’t forget our annual HOA meeting this Saturday at 6 PM in the community
                      clubhouse. Attendance is highly encouraged.
                    </p>
                    <a href="#" class="text-decoration-none"
                      >Read more<i class="ri-arrow-right-line ms-2"></i></a
                    >
                  </div>
                </div>
              </div>
              <!-- Card 3 -->
              <div class="col-lg-4">
                <div class="card card-lift border h-100">
                  <div class="card-body">
                    <h5 class="card-title fs-5">Pool Opening Schedule</h5>
                    <p class="text-muted mb-2">May 25, 2025</p>
                    <p class="card-text mb-2">
                      Our community pool will officially open for the summer on June 1st. Pool hours
                      will be from 10 AM to 8 PM daily.
                    </p>
                    <a href="#" class="text-decoration-none"
                      >Read more<i class="ri-arrow-right-line ms-2"></i></a
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Upcoming Events Section -->
        <section class="bg-body pt-3 pb-5">
          <div class="container">
            <!-- Heading Row -->
            <div
              class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-3 mb-4"
            >
              <h2 class="fs-1 mb-0">Upcoming Events</h2>
              <a href="/theme/3/events" class="btn btn-lg btn-outline-primary rounded-pill px-4"
                >View All<i class="ri-arrow-right-line ms-2"></i></a
              >
            </div>

            <!-- Event Cards -->
            <div class="row g-4">
              <!-- Card 1 -->
              <div class="col-lg-4">
                <div class="card card-lift border position-relative h-100">
                  <span
                    class="badge text-body bg-secondary-subtle position-absolute fs-6 top-0 end-0 m-4"
                    >Social</span
                  >
                  <div class="card-body">
                    <h5 class="card-title fs-5">Community BBQ</h5>
                    <p class="text-muted mb-2"><i class="ri-calendar-line me-2"></i>Jun 10, 2025</p>
                    <p class="text-muted mb-2">
                      <i class="ri-time-line me-2"></i>4:00 PM - 6:00 PM
                    </p>
                    <p class="text-muted mb-0"><i class="ri-map-pin-line me-2"></i>Clubhouse</p>
                  </div>
                </div>
              </div>

              <!-- Card 2 -->
              <div class="col-lg-4">
                <div class="card card-lift border position-relative h-100">
                  <span
                    class="badge text-body bg-secondary-subtle position-absolute fs-6 top-0 end-0 m-4"
                    >Meeting</span
                  >
                  <div class="card-body">
                    <h5 class="card-title fs-5">Board Meeting</h5>
                    <p class="text-muted mb-2"><i class="ri-calendar-line me-2"></i>May 28, 2025</p>
                    <p class="text-muted mb-2">
                      <i class="ri-time-line me-2"></i>7:00 PM - 8:00 PM
                    </p>
                    <p class="text-muted mb-0"><i class="ri-map-pin-line me-2"></i>HOA Office</p>
                  </div>
                </div>
              </div>

              <!-- Card 3 -->
              <div class="col-lg-4">
                <div class="card card-lift border position-relative h-100">
                  <span
                    class="badge text-body bg-secondary-subtle position-absolute fs-6 top-0 end-0 m-4"
                    >Fitness</span
                  >
                  <div class="card-body">
                    <h5 class="card-title fs-5">Yoga Class</h5>
                    <p class="text-muted mb-2"><i class="ri-calendar-line me-2"></i>Jun 4, 2025</p>
                    <p class="text-muted mb-2">
                      <i class="ri-time-line me-2"></i>7:00 AM - 9:00 AM
                    </p>
                    <p class="text-muted mb-0"><i class="ri-map-pin-line me-2"></i>Gym</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>

        <!-- Footer -->
        <footer class="bg-body pt-5 pb-4 border-top">
          <div class="container">
            <div class="row gy-4">
              <!-- Logo and Contact Info -->
              <div class="col-lg-4 col-md-6">
                <img
                  src="/dist/assets/img/placeholder-logos/logoipsum-334.svg"
                  alt="Logo"
                  style="height: 32px;"
                  class="mb-4"
                />
                <ul class="list-unstyled">
                  <li class="mb-2">
                    <a href="tel:+12345678901" class="text-body text-decoration-none">
                      <i class="ri-phone-fill text-primary me-2"></i>+1 (234) 567-8901
                    </a>
                  </li>
                  <li class="mb-2">
                    <a href="mailto:hello@email.com" class="text-body text-decoration-none">
                      <i class="ri-mail-fill text-primary me-2"></i>hello@email.com
                    </a>
                  </li>
                  <li>
                    <i class="ri-map-pin-fill text-primary me-2"></i>123 Longhorn Heights, Austin,
                    TX
                  </li>
                </ul>
              </div>

              <!-- Navigation Links -->
              <div class="col-lg-4 col-md-6">
                <div class="row">
                  <div class="col-6">
                    <h5 class="fs-5 mb-3">Quick Links</h5>
                    <ul class="list-unstyled">
                      <li>
                        <a href="/theme/3/home" class="text-body text-decoration-none d-block mb-2"
                          >Home</a
                        >
                      </li>
                      <li>
                        <a href="/theme/3/about" class="text-body text-decoration-none d-block mb-2"
                          >About</a
                        >
                      </li>
                      <li>
                        <a href="/theme/3/news" class="text-body text-decoration-none d-block mb-2"
                          >News</a
                        >
                      </li>
                      <li>
                        <a href="/theme/3/faq" class="text-body text-decoration-none d-block mb-2"
                          >FAQs</a
                        >
                      </li>
                      <li>
                        <a href="/theme/3/contact" class="text-body text-decoration-none d-block"
                          >Contact</a
                        >
                      </li>
                    </ul>
                  </div>
                  <div class="col-6">
                    <h5 class="fs-5 mb-3">Explore</h5>
                    <ul class="list-unstyled">
                      <li>
                        <a
                          href="/theme/3/amenities"
                          class="text-body text-decoration-none d-block mb-2">Amenities</a
                        >
                      </li>
                      <li>
                        <a
                          href="/theme/3/board-members"
                          class="text-body text-decoration-none d-block mb-2">Board</a
                        >
                      </li>
                      <li>
                        <a
                          href="/theme/3/events"
                          class="text-body text-decoration-none d-block mb-2">Events</a
                        >
                      </li>
                      <li>
                        <a
                          href="/theme/3/facilities"
                          class="text-body text-decoration-none d-block mb-2">Facilities</a
                        >
                      </li>
                      <li>
                        <a
                          href="/theme/3/gallery"
                          class="text-body text-decoration-none d-block mb-2">Gallery</a
                        >
                      </li>
                      <li>
                        <a href="/theme/3/history" class="text-body text-decoration-none d-block"
                          >History</a
                        >
                      </li>
                    </ul>
                  </div>
                </div>
              </div>

              <!-- Newsletter -->
              <div class="col-lg-4">
                <h5 class="fs-5 mb-2">Subscribe to our Newsletter</h5>
                <p class="text-muted mb-3">
                  Get community updates, event invites, and more—straight to your inbox.
                </p>
                <form>
                  <div class="mb-3">
                    <input
                      type="email"
                      class="form-control form-control-lg"
                      placeholder="Enter your email"
                      required
                    />
                  </div>
                  <button
                    type="submit"
                    class="btn btn-primary w-100 d-flex align-items-center justify-content-center"
                  >
                    <i class="ri-send-plane-fill me-2"></i>Subscribe
                  </button>
                </form>
              </div>
            </div>

            <!-- Footer Bottom -->
            <div class="text-center pt-4 mt-4 border-top">
              <p class="text-muted mb-0">&copy; 2025 Company, Inc. All rights reserved.</p>
            </div>
          </div>
        </footer>
      </div>

      <!-- All Scripts -->
      <Scripts />
    </main>
  </body>
</html>
