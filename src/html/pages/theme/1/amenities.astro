---
import Layout from './layout.astro'
import { getAssetPrefix } from '../../../../utils/path.js'
---

<Layout
  title="Amenities"
  description="A clean, responsive theme designed to help homeowners associations build a strong online presence."
>
  <!-- Hero Section -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/theme-images/hero-1.jpg')}'); background-size: cover; background-position: center; height: 400px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
    <!-- Content -->
    <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <h1 class="display-4 fw-semibold mb-2">Amenities</h1>
          <p class="fs-4 mb-0">
            Explore the amenities that make life at Longhorn Heights comfortable, active, and
            connected to nature.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Pool Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <h2 class="fs-1 mb-2">Resort-Style Pool</h2>
          <p class="mb-3">
            Enjoy a relaxing day at our resort-style pool, featuring shaded seating, a shallow kidsâ€™
            area, and poolside Wi-Fi access.
          </p>
          <div class="row">
            <div class="col-md-6">
              <ul class="list-unstyled mb-2">
                <li class="mb-2">
                  <i class="ri-checkbox-circle-fill text-primary me-2"></i>Lounge Areas
                </li>
                <li><i class="ri-checkbox-circle-fill text-primary me-2"></i>Kids Zone</li>
              </ul>
            </div>
            <div class="col-md-6">
              <ul class="list-unstyled mb-2">
                <li class="mb-2">
                  <i class="ri-checkbox-circle-fill text-primary me-2"></i>Poolside Wi-Fi
                </li>
                <li>
                  <i class="ri-checkbox-circle-fill text-primary me-2"></i>Outdoor Showers
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-md-4 mt-4 mt-md-0">
          <figure class="img-scale rounded-4 mb-0">
            <img
              src={getAssetPrefix('/assets/img/theme-images/img-2.jpg')}
              class="img-fluid"
              alt="Amenities Image"
            />
          </figure>
        </div>
      </div>
    </div>
  </section>

  <!-- Sports Section -->
  <section class="bg-primary-pale py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-8 order-md-2 ps-lg-5">
          <h2 class="fs-1 mb-2">Sports Facilities</h2>
          <p class="mb-3">
            Stay active and energized with access to our multi-use sports court, perfect for tennis,
            basketball, and community games.
          </p>
          <div class="row">
            <div class="col-md-6">
              <ul class="list-unstyled mb-2">
                <li class="mb-2">
                  <i class="ri-checkbox-circle-fill text-primary me-2"></i>Tennis Court
                </li>
                <li>
                  <i class="ri-checkbox-circle-fill text-primary me-2"></i>Basketball Court
                </li>
              </ul>
            </div>
            <div class="col-md-6">
              <ul class="list-unstyled mb-2">
                <li class="mb-2">
                  <i class="ri-checkbox-circle-fill text-primary me-2"></i>Shaded Seating
                </li>
                <li>
                  <i class="ri-checkbox-circle-fill text-primary me-2"></i>Evening Lighting
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-md-4 order-md-1 mt-4 mt-md-0">
          <figure class="img-scale rounded-4 mb-0">
            <img
              src={getAssetPrefix('/assets/img/theme-images/img-4.jpg')}
              class="img-fluid"
              alt="Amenities Image"
            />
          </figure>
        </div>
      </div>
    </div>
  </section>

  <!-- Clubhouse Section -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <h2 class="fs-1 mb-2">Community Clubhouse</h2>
          <p class="mb-3">
            Host private events or relax with neighbors in our clubhouse, complete with a kitchen,
            seating, and media lounge.
          </p>
          <div class="row">
            <div class="col-md-6">
              <ul class="list-unstyled mb-2">
                <li class="mb-2">
                  <i class="ri-checkbox-circle-fill text-primary me-2"></i>Lounge Seating
                </li>
                <li><i class="ri-checkbox-circle-fill text-primary me-2"></i>Event Space</li>
              </ul>
            </div>
            <div class="col-md-6">
              <ul class="list-unstyled mb-2">
                <li class="mb-2">
                  <i class="ri-checkbox-circle-fill text-primary me-2"></i>Full Kitchen
                </li>
                <li>
                  <i class="ri-checkbox-circle-fill text-primary me-2"></i>Big-Screen TV
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-md-4 mt-4 mt-md-0">
          <figure class="img-scale rounded-4 mb-0">
            <img
              src={getAssetPrefix('/assets/img/theme-images/img-3.jpg')}
              class="img-fluid"
              alt="Amenities Image"
            />
          </figure>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="text-bg-primary py-5">
    <div class="container text-center">
      <!-- Heading and Intro -->
      <h2 class="fs-1 mb-2">Stay Connected</h2>
      <p class="mb-4">
        Sign up for updates about community news, upcoming events, and important HOA announcements.
      </p>
      <div class="row">
        <div class="col-lg-8 offset-lg-2">
          <!-- Form -->
          <form class="row g-4 justify-content-center">
            <!-- Name Field -->
            <div class="col-12 col-md-6">
              <input
                type="text"
                class="form-control form-control-lg"
                placeholder="Your Name"
                required
              />
            </div>
            <!-- Phone Field -->
            <div class="col-12 col-md-6">
              <input
                type="tel"
                class="form-control form-control-lg"
                placeholder="Phone Number"
                pattern="[0-9\-+()\s]{7,15}"
                required
              />
            </div>
            <!-- Email Field -->
            <div class="col-12">
              <input
                type="email"
                class="form-control form-control-lg"
                placeholder="Email Address"
                required
              />
            </div>
            <!-- Submit Button -->
            <div class="col-12 col-md-auto">
              <button type="submit" class="btn btn-lg btn-dark w-100">
                Subscribe<i class="ri-arrow-right-line ms-2"></i>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>
