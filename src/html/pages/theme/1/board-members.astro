---
import Layout from './layout.astro'
import { getAssetPrefix } from '../../../../utils/path.js'
---

<Layout
  title="Board Members"
  description="A clean, responsive theme designed to help homeowners associations build a strong online presence."
>
  <!-- Hero Section -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/theme-images/hero-1.jpg')}'); background-size: cover; background-position: center; height: 400px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
    <!-- Content -->
    <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <h1 class="display-4 fw-semibold mb-2">Board Members</h1>
          <p class="fs-4 mb-0">
            Get to know the dedicated residents who lead our community, make key decisions, and
            ensure Longhorn Heights thrives year-round.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Meet the Board Section -->
  <section class="bg-body py-5">
    <div class="container">
      <h2 class="fs-1 text-center mb-4">Meet the Current Board</h2>
      <div class="row g-4">
        <!-- Member 1 -->
        <div class="col-sm-6 col-lg-3">
          <div class="card card-lift border h-100">
            <div class="card-body">
              <h5 class="card-title">Jane Doe</h5>
              <p class="card-text mb-2">President</p>
              <a href="mailto:jane.doe@email.com" class="text-primary text-decoration-none">
                <i class="ri-mail-fill me-2"></i>jane.doe@email.com
              </a>
            </div>
          </div>
        </div>

        <!-- Member 2 -->
        <div class="col-sm-6 col-lg-3">
          <div class="card card-lift border h-100">
            <div class="card-body">
              <h5 class="card-title">Mark Smith</h5>
              <p class="card-text mb-2">Vice President</p>
              <a href="mailto:mark.smith@email.com" class="text-primary text-decoration-none">
                <i class="ri-mail-fill me-2"></i>mark.smith@email.com
              </a>
            </div>
          </div>
        </div>

        <!-- Member 3 -->
        <div class="col-sm-6 col-lg-3">
          <div class="card card-lift border h-100">
            <div class="card-body">
              <h5 class="card-title">Lisa Johnson</h5>
              <p class="card-text mb-2">Treasurer</p>
              <a href="mailto:lisa.j@email.com" class="text-primary text-decoration-none">
                <i class="ri-mail-fill me-2"></i>lisa.j@email.com
              </a>
            </div>
          </div>
        </div>

        <!-- Member 4 -->
        <div class="col-sm-6 col-lg-3">
          <div class="card card-lift border h-100">
            <div class="card-body">
              <h5 class="card-title">Carlos Rivera</h5>
              <p class="card-text mb-2">Secretary</p>
              <a href="mailto:carlos.r@email.com" class="text-primary text-decoration-none">
                <i class="ri-mail-fill me-2"></i>carlos.r@email.com
              </a>
            </div>
          </div>
        </div>

        <!-- Member 5 -->
        <div class="col-sm-6 col-lg-3">
          <div class="card card-lift border h-100">
            <div class="card-body">
              <h5 class="card-title">Emily Chen</h5>
              <p class="card-text mb-2">Events Coordinator</p>
              <a href="mailto:emily.chen@email.com" class="text-primary text-decoration-none">
                <i class="ri-mail-fill me-2"></i>emily.chen@email.com
              </a>
            </div>
          </div>
        </div>

        <!-- Member 6 -->
        <div class="col-sm-6 col-lg-3">
          <div class="card card-lift border h-100">
            <div class="card-body">
              <h5 class="card-title">David Patel</h5>
              <p class="card-text mb-2">Maintenance Chair</p>
              <a href="mailto:david.patel@email.com" class="text-primary text-decoration-none">
                <i class="ri-mail-fill me-2"></i>david.patel@email.com
              </a>
            </div>
          </div>
        </div>

        <!-- Member 7 -->
        <div class="col-sm-6 col-lg-3">
          <div class="card card-lift border h-100">
            <div class="card-body">
              <h5 class="card-title">Angela Brooks</h5>
              <p class="card-text mb-2">Landscaping Lead</p>
              <a href="mailto:angela.b@email.com" class="text-primary text-decoration-none">
                <i class="ri-mail-fill me-2"></i>angela.b@email.com
              </a>
            </div>
          </div>
        </div>

        <!-- Member 8 -->
        <div class="col-sm-6 col-lg-3">
          <div class="card card-lift border h-100">
            <div class="card-body">
              <h5 class="card-title">Thomas Nguyen</h5>
              <p class="card-text mb-2">Member-at-Large</p>
              <a href="mailto:thomas.n@email.com" class="text-primary text-decoration-none">
                <i class="ri-mail-fill me-2"></i>thomas.n@email.com
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Elections Section -->
  <section class="bg-body pb-5">
    <div class="container">
      <h2 class="fs-1 text-center mb-4">Board Elections</h2>
      <div class="row justify-content-center">
        <div class="col-md-10">
          <div class="p-4 border rounded-4">
            <p>
              Board members are elected by HOA members during our annual community meeting. Each
              household has one vote, and terms last for two years. Nominations open 30 days before
              the election.
            </p>
            <ul class="list-group list-group-flush mt-3">
              <li class="list-group-item">
                <i class="ri-checkbox-circle-line text-primary me-2"></i>Nominations open in October
              </li>
              <li class="list-group-item">
                <i class="ri-checkbox-circle-line text-primary me-2"></i>Annual elections held in
                November
              </li>
              <li class="list-group-item">
                <i class="ri-checkbox-circle-line text-primary me-2"></i>Each household may vote
                once
              </li>
              <li class="list-group-item">
                <i class="ri-checkbox-circle-line text-primary me-2"></i>Results shared via email &
                posted online
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Meetings Section -->
  <section class="bg-body pb-5">
    <div class="container">
      <h2 class="fs-1 text-center mb-4">Board Meetings</h2>
      <div class="row">
        <div class="col-md-6">
          <div class="card bg-secondary-subtle border">
            <div class="card-body">
              <h5 class="card-title fs-5">
                <i class="ri-calendar-event-fill me-2"></i>Next Meeting
              </h5>
              <p class="card-text mb-2">Tuesday, June 18, 2025</p>
              <p class="card-text mb-2">6:00 PM at the Clubhouse</p>
              <p class="card-text">
                <i class="ri-map-pin-line me-1"></i>123 Longhorn Heights, Austin, TX
              </p>
            </div>
          </div>
        </div>

        <div class="col-md-6 mt-4 mt-md-0">
          <h5>What to Expect:</h5>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <i class="ri-discuss-fill text-primary me-2"></i>Community Updates
            </li>
            <li class="list-group-item">
              <i class="ri-clipboard-fill text-primary me-2"></i>Financial Reports
            </li>
            <li class="list-group-item">
              <i class="ri-user-voice-fill text-primary me-2"></i>Open Forum for Residents
            </li>
            <li class="list-group-item">
              <i class="ri-calendar-check-fill text-primary me-2"></i>Upcoming Events & Planning
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="text-bg-primary py-5">
    <div class="container text-center">
      <!-- Heading and Intro -->
      <h2 class="fs-1 mb-2">Stay Connected</h2>
      <p class="mb-4">
        Sign up for updates about community news, upcoming events, and important HOA announcements.
      </p>
      <div class="row">
        <div class="col-lg-8 offset-lg-2">
          <!-- Form -->
          <form class="row g-4 justify-content-center">
            <!-- Name Field -->
            <div class="col-12 col-md-6">
              <input
                type="text"
                class="form-control form-control-lg"
                placeholder="Your Name"
                required
              />
            </div>
            <!-- Phone Field -->
            <div class="col-12 col-md-6">
              <input
                type="tel"
                class="form-control form-control-lg"
                placeholder="Phone Number"
                pattern="[0-9\-+()\s]{7,15}"
                required
              />
            </div>
            <!-- Email Field -->
            <div class="col-12">
              <input
                type="email"
                class="form-control form-control-lg"
                placeholder="Email Address"
                required
              />
            </div>
            <!-- Submit Button -->
            <div class="col-12 col-md-auto">
              <button type="submit" class="btn btn-lg btn-dark w-100">
                Subscribe<i class="ri-arrow-right-line ms-2"></i>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>
