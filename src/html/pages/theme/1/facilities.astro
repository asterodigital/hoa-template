---
import Head from '../../../../html/layouts/front/partials/_head.astro'
import Scripts from '../../../../html/layouts/front/partials/_scripts.astro'
---

<!doctype html>
<html lang="en">
  <head>
    <Head />
  </head>
  <body>
    <!-- Main Content -->
    <main>
      <!-- Page Content -->
      <div class="content-wrapper">
        <!-- Navbar -->
        <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-body shadow-sm z-3">
          <div class="container">
            <!-- Brand Logo or Text -->
            <a class="navbar-brand d-flex align-items-center" href="/theme/1/home">
              <img
                src="/dist/assets/img/placeholder-logos/logoipsum-288.svg"
                alt="Logo"
                class="me-2"
                style="height: 32px;"
              />
            </a>

            <!-- Offcanvas Toggler -->
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="offcanvas"
              data-bs-target="#offcanvasNavbar"
              aria-controls="offcanvasNavbar"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Offcanvas Menu -->
            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar">
              <div class="offcanvas-header">
                <a class="navbar-brand d-flex align-items-center" href="/theme/1/home">
                  <img
                    src="/dist/assets/img/placeholder-logos/logoipsum-288.svg"
                    alt="Logo"
                    class="me-2"
                    style="height: 32px;"
                  />
                </a>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="offcanvas"
                  aria-label="Close"></button>
              </div>
              <div class="offcanvas-body d-flex flex-column justify-content-between h-100">
                <ul
                  class="navbar-nav flex-grow-1 pe-3 justify-content-start justify-content-lg-center"
                >
                  <!-- Home -->
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/1/home">Home</a>
                  </li>

                  <!-- About Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="aboutDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      About
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="aboutDropdown">
                      <li><a class="dropdown-item" href="/theme/1/about">About Us</a></li>
                      <li>
                        <a class="dropdown-item" href="/theme/1/amenities">Amenities</a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="/theme/1/history">History</a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="/theme/1/faq">FAQs</a>
                      </li>
                    </ul>
                  </li>

                  <!-- Community Dropdown -->
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="communityDropdown"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      Community
                    </a>
                    <ul class="dropdown-menu" aria-labelledby="communityDropdown">
                      <li>
                        <a class="dropdown-item" href="/theme/1/board-members">Board Members</a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="/theme/1/events">Events</a>
                      </li>
                      <li>
                        <a class="dropdown-item" href="/theme/1/news">News</a>
                      </li>
                    </ul>
                  </li>

                  <!-- Facilities -->
                  <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/theme/1/facilities"
                      >Facilities</a
                    >
                  </li>

                  <!-- Gallery -->
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/1/gallery">Gallery</a>
                  </li>

                  <!-- Contact -->
                  <li class="nav-item">
                    <a class="nav-link" href="/theme/1/contact">Contact</a>
                  </li>
                </ul>

                <!-- Bottom Section -->
                <div class="d-block d-lg-none mt-4">
                  <a href="tel:+12345678901" class="btn btn-outline-primary rounded w-100 mb-2">
                    <i class="ri-phone-fill me-2"></i>Book Consultation
                  </a>
                  <a class="btn btn-primary rounded w-100" href="#"
                    ><i class="ri-sparkling-2-fill me-2"></i> Get Started Now</a
                  >
                </div>
              </div>
            </div>

            <div class="d-none d-lg-flex align-items-center gap-3">
              <div class="text-start">
                <small class="text-muted d-block">Book Consultation</small>
                <a href="tel:+12345678901" class="text-decoration-none text-body fw-medium">
                  +1 (234) 567-8901
                </a>
              </div>

              <a class="btn btn-lg btn-primary rounded" href="#">Get Started</a>
            </div>
          </div>
        </nav>

        <!-- Hero Section -->
        <section
          class="position-relative text-light text-center"
          style="background-image: url('/dist/assets/img/theme-images/hero-1.jpg'); background-size: cover; background-position: center; height: 400px;"
        >
          <!-- Overlay -->
          <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
          <!-- Content -->
          <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
            <div class="row">
              <div class="col-lg-6 offset-lg-3">
                <h1 class="display-4 fw-semibold mb-2">Facilities</h1>
                <p class="fs-4 mb-0">
                  Discover the essential facilities that support everyday living and keep Longhorn
                  Heights running smoothly and efficiently.
                </p>
              </div>
            </div>
          </div>
        </section>

        <!-- Facility 1 -->
        <section class="bg-body py-5">
          <div class="container">
            <div class="row">
              <div class="col-md-8">
                <h2 class="fs-1 mb-2">Reliable Utilities</h2>
                <p class="mb-3">
                  Consistent electricity, water, and waste management services keep your home
                  comfortable and functional.
                </p>
                <div class="row">
                  <div class="col-md-6">
                    <ul class="list-unstyled mb-2">
                      <li class="mb-2">
                        <i class="ri-checkbox-circle-fill text-primary me-2"></i>Consistent
                        Electricity
                      </li>
                      <li>
                        <i class="ri-checkbox-circle-fill text-primary me-2"></i>Constant Water
                        Supply
                      </li>
                    </ul>
                  </div>
                  <div class="col-md-6">
                    <ul class="list-unstyled mb-2">
                      <li class="mb-2">
                        <i class="ri-checkbox-circle-fill text-primary me-2"></i>Waste Management
                      </li>
                      <li>
                        <i class="ri-checkbox-circle-fill text-primary me-2"></i>Essential Goods
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
              <div class="col-md-4 mt-4 mt-md-0">
                <figure class="img-scale rounded-4 mb-0">
                  <img
                    src="/dist/assets/img/theme-images/img-1.jpg"
                    class="img-fluid"
                    alt="Facilities Image"
                  />
                </figure>
              </div>
            </div>
          </div>
        </section>

        <!-- Facility 2 -->
        <section class="bg-primary-pale py-5">
          <div class="container">
            <div class="row">
              <div class="col-md-8 order-md-2 ps-lg-5">
                <h2 class="fs-1 mb-2">Security & Surveillance</h2>
                <p class="mb-3">
                  24/7 gated security, patrols, and surveillance cameras help maintain a safe living
                  environment for all residents.
                </p>
                <div class="row">
                  <div class="col-md-6">
                    <ul class="list-unstyled mb-2">
                      <li class="mb-2">
                        <i class="ri-checkbox-circle-fill text-primary me-2"></i>24/7 Security
                      </li>
                      <li>
                        <i class="ri-checkbox-circle-fill text-primary me-2"></i>Regular Patrols
                      </li>
                    </ul>
                  </div>
                  <div class="col-md-6">
                    <ul class="list-unstyled mb-2">
                      <li class="mb-2">
                        <i class="ri-checkbox-circle-fill text-primary me-2"></i>Surveillance
                        Cameras
                      </li>
                      <li>
                        <i class="ri-checkbox-circle-fill text-primary me-2"></i>Trained Personnel
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
              <div class="col-md-4 order-md-1 mt-4 mt-md-0">
                <figure class="img-scale rounded-4 mb-0">
                  <img
                    src="/dist/assets/img/theme-images/img-8.jpg"
                    class="img-fluid"
                    alt="Facilities Image"
                  />
                </figure>
              </div>
            </div>
          </div>
        </section>

        <!-- Facility 3 -->
        <section class="bg-body py-5">
          <div class="container">
            <div class="row">
              <div class="col-md-8">
                <h2 class="fs-1 mb-2">Parking & Transportation</h2>
                <p class="mb-3">
                  Well-maintained visitor parking, bike racks, and easy access to public
                  transportation routes.
                </p>
                <div class="row">
                  <div class="col-md-6">
                    <ul class="list-unstyled mb-2">
                      <li class="mb-2">
                        <i class="ri-checkbox-circle-fill text-primary me-2"></i>Visitor Parking
                      </li>
                      <li>
                        <i class="ri-checkbox-circle-fill text-primary me-2"></i>Bike Racks
                      </li>
                    </ul>
                  </div>
                  <div class="col-md-6">
                    <ul class="list-unstyled mb-2">
                      <li class="mb-2">
                        <i class="ri-checkbox-circle-fill text-primary me-2"></i>Safe Walkways
                      </li>
                      <li>
                        <i class="ri-checkbox-circle-fill text-primary me-2"></i>Easy Access to
                        Routes
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
              <div class="col-md-4 mt-4 mt-md-0">
                <figure class="img-scale rounded-4 mb-0">
                  <img
                    src="/dist/assets/img/theme-images/img-9.jpg"
                    class="img-fluid"
                    alt="Facilities Image"
                  />
                </figure>
              </div>
            </div>
          </div>
        </section>

        <!-- Newsletter Section -->
        <section class="text-bg-primary py-5">
          <div class="container text-center">
            <!-- Heading and Intro -->
            <h2 class="fs-1 mb-2">Stay Connected</h2>
            <p class="mb-4">
              Sign up for updates about community news, upcoming events, and important HOA
              announcements.
            </p>
            <div class="row">
              <div class="col-lg-8 offset-lg-2">
                <!-- Form -->
                <form class="row g-4 justify-content-center">
                  <!-- Name Field -->
                  <div class="col-12 col-md-6">
                    <input
                      type="text"
                      class="form-control form-control-lg"
                      placeholder="Your Name"
                      required
                    />
                  </div>
                  <!-- Phone Field -->
                  <div class="col-12 col-md-6">
                    <input
                      type="tel"
                      class="form-control form-control-lg"
                      placeholder="Phone Number"
                      pattern="[0-9\-+()\s]{7,15}"
                      required
                    />
                  </div>
                  <!-- Email Field -->
                  <div class="col-12">
                    <input
                      type="email"
                      class="form-control form-control-lg"
                      placeholder="Email Address"
                      required
                    />
                  </div>
                  <!-- Submit Button -->
                  <div class="col-12 col-md-auto">
                    <button type="submit" class="btn btn-lg btn-dark w-100">
                      Subscribe<i class="ri-arrow-right-line ms-2"></i>
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </section>

        <!-- Footer -->
        <footer class="bg-body">
          <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-5 px-3 px-lg-5 pt-5 pb-4">
              <div class="col mb-3">
                <a
                  href="/"
                  class="d-inline-flex align-items-center text-decoration-none mb-3"
                  aria-label="Your Company Logo"
                >
                  <img
                    src="/dist/assets/img/placeholder-logos/logoipsum-288.svg"
                    alt="Logo"
                    style="height: 32px;"
                    class="me-2"
                  />
                </a>
                <p class="text-body-secondary mb-3">
                  Stay connected with our community—subscribe to updates and never miss important
                  news or events!
                </p>
                <button class="btn btn-lg btn-primary">Get in touch</button>
              </div>

              <div class="col mb-3"></div>

              <div class="col mb-3">
                <nav aria-label="Quick Links">
                  <h5 class="mb-3">Quick Links</h5>
                  <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                      <a href="/theme/1/home" class="nav-link p-0 text-body-secondary">Home</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/theme/1/about" class="nav-link p-0 text-body-secondary">About</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/theme/1/news" class="nav-link p-0 text-body-secondary">News</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/theme/1/faq" class="nav-link p-0 text-body-secondary">FAQs</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="/theme/1/contact" class="nav-link p-0 text-body-secondary">Contact</a
                      >
                    </li>
                  </ul>
                </nav>
              </div>

              <div class="col mb-3">
                <nav aria-label="Legal">
                  <h5 class="mb-3">Legal</h5>
                  <ul class="nav flex-column">
                    <li class="nav-item mb-2">
                      <a href="#" class="nav-link p-0 text-body-secondary">Terms of Use</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="#" class="nav-link p-0 text-body-secondary">Privacy Policy</a>
                    </li>
                    <li class="nav-item mb-2">
                      <a href="#" class="nav-link p-0 text-body-secondary">Cookies Policy</a>
                    </li>
                  </ul>
                </nav>
              </div>

              <div class="col mb-3">
                <h5 class="mb-3">Contact</h5>
                <ul class="nav flex-column">
                  <li class="nav-item mb-2 text-body-secondary">
                    <i class="ri-phone-fill text-primary me-2"></i>
                    <a
                      href="tel:+12345678901"
                      class="text-body-secondary text-decoration-none text-break"
                      >+1 (234) 567-8901</a
                    >
                  </li>
                  <li class="nav-item mb-2 text-body-secondary">
                    <i class="ri-mail-fill text-primary me-2"></i>
                    <a
                      href="mailto:hello@email.com"
                      class="text-body-secondary text-decoration-none text-break">hello@email.com</a
                    >
                  </li>
                  <li class="nav-item mb-2 text-body-secondary">
                    <address class="text-body-secondary">
                      <i class="ri-map-pin-fill text-primary me-2"></i>
                      123 Longhorn Heights, Austin, TX
                    </address>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <div class="text-center text-bg-dark py-4">
            <p class="mb-0">© 2025 Company, Inc. All rights reserved.</p>
          </div>
        </footer>
      </div>

      <!-- All Scripts -->
      <Scripts />
    </main>
  </body>
</html>
