---
import Layout from './layout.astro'
import { getAssetPrefix } from '../../../../utils/path.js'
---

<Layout
  title="FAQs"
  description="A clean, responsive theme designed to help homeowners associations build a strong online presence."
>
  <!-- Hero Section -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/theme-images/hero-1.jpg')}'); background-size: cover; background-position: center; height: 400px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
    <!-- Content -->
    <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <h1 class="display-4 fw-semibold mb-2" data-aos="fade-up" data-aos-duration="1600">
            Your Questions, Answered
          </h1>
          <p class="fs-4 mb-0" data-aos="fade-up" data-aos-delay="200" data-aos-duration="1600">
            Find answers to the most common questions about our homeowners association and
            community.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQs Section -->
  <section class="bg-body py-5">
    <div class="container">
      <h2 class="fs-1 text-center mb-3" data-aos="fade-up" data-aos-duration="1400">
        Frequently Asked Questions
      </h2>
      <p class="mb-4 text-center" data-aos="fade-up" data-aos-delay="100" data-aos-duration="1400">
        Find answers to the most common questions about our homeowners association and community. If
        you have any additional questions, please don't hesitate to reach out to us.
      </p>
      <div class="row">
        <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
          <!-- Nav Tabs -->
          <ul
            class="nav nav-tabs justify-content-center flex-wrap gap-2 mb-3"
            id="faqTabs"
            role="tablist"
            data-aos="fade-in"
            data-aos-delay="100"
            data-aos-duration="1400"
          >
            <li class="nav-item" role="presentation">
              <button
                class="nav-link text-body active"
                id="general-tab"
                data-bs-toggle="tab"
                data-bs-target="#general"
                type="button"
                role="tab"
                aria-controls="general"
                aria-selected="true"
              >
                General
              </button>
            </li>
            <li class="nav-item" role="presentation">
              <button
                class="nav-link text-body"
                id="payments-tab"
                data-bs-toggle="tab"
                data-bs-target="#payments"
                type="button"
                role="tab"
                aria-controls="payments"
                aria-selected="false"
              >
                Payments
              </button>
            </li>
            <li class="nav-item" role="presentation">
              <button
                class="nav-link text-body"
                id="policies-tab"
                data-bs-toggle="tab"
                data-bs-target="#policies"
                type="button"
                role="tab"
                aria-controls="policies"
                aria-selected="false"
              >
                Policies
              </button>
            </li>
          </ul>

          <!-- Tab Panes -->
          <div
            class="tab-content"
            data-aos="fade-in"
            data-aos-delay="200"
            data-aos-duration="1400"
            id="faqTabContent"
          >
            <!-- General Tab -->
            <div
              class="tab-pane fade show active"
              id="general"
              role="tabpanel"
              aria-labelledby="general-tab"
            >
              <div
                class="accordion accordion-flush"
                id="accordionGeneral"
                role="tablist"
                aria-multiselectable="true"
              >
                <div class="accordion-item bg-transparent">
                  <h2 class="accordion-header">
                    <button
                      class="accordion-button bg-transparent collapsed rounded shadow-none p-3"
                      type="button"
                      data-bs-toggle="collapse"
                      data-bs-target="#general-collapseOne"
                      aria-expanded="false"
                      aria-controls="general-collapseOne"
                    >
                      When are homeowners association meetings held?
                    </button>
                  </h2>
                  <div
                    id="general-collapseOne"
                    class="accordion-collapse collapse"
                    data-bs-parent="#accordionGeneral"
                  >
                    <div class="accordion-body p-3 pt-0">
                      HOA meetings are held quarterly at the clubhouse. Dates are posted on the
                      community website and emailed to residents in advance.
                    </div>
                  </div>
                </div>
                <div class="accordion-item bg-transparent">
                  <h2 class="accordion-header">
                    <button
                      class="accordion-button bg-transparent collapsed rounded shadow-none p-3"
                      type="button"
                      data-bs-toggle="collapse"
                      data-bs-target="#general-collapseTwo"
                      aria-expanded="false"
                      aria-controls="general-collapseTwo"
                    >
                      Who do I contact for maintenance issues in common areas?
                    </button>
                  </h2>
                  <div
                    id="general-collapseTwo"
                    class="accordion-collapse collapse"
                    data-bs-parent="#accordionGeneral"
                  >
                    <div class="accordion-body p-3 pt-0">
                      Please report any maintenance concerns through the HOA contact form or by
                      calling the property management company directly.
                    </div>
                  </div>
                </div>
                <div class="accordion-item bg-transparent">
                  <h2 class="accordion-header">
                    <button
                      class="accordion-button bg-transparent collapsed rounded shadow-none p-3"
                      type="button"
                      data-bs-toggle="collapse"
                      data-bs-target="#general-collapseThree"
                      aria-expanded="false"
                      aria-controls="general-collapseThree"
                    >
                      Are there rules about parking or street parking?
                    </button>
                  </h2>
                  <div
                    id="general-collapseThree"
                    class="accordion-collapse collapse"
                    data-bs-parent="#accordionGeneral"
                  >
                    <div class="accordion-body p-3 pt-0">
                      Yes. Overnight street parking is limited in certain areas. Residents are
                      encouraged to use driveways and garages when possible.
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- Payments Tab -->
            <div class="tab-pane fade" id="payments" role="tabpanel" aria-labelledby="payments-tab">
              <div
                class="accordion accordion-flush"
                id="accordionPayments"
                role="tablist"
                aria-multiselectable="true"
              >
                <div class="accordion-item bg-transparent">
                  <h2 class="accordion-header">
                    <button
                      class="accordion-button bg-transparent collapsed rounded shadow-none p-3"
                      type="button"
                      data-bs-toggle="collapse"
                      data-bs-target="#payments-collapseOne"
                      aria-expanded="false"
                      aria-controls="payments-collapseOne"
                    >
                      How can I pay my HOA dues?
                    </button>
                  </h2>
                  <div
                    id="payments-collapseOne"
                    class="accordion-collapse collapse"
                    data-bs-parent="#accordionPayments"
                  >
                    <div class="accordion-body p-3 pt-0">
                      You can pay your dues online through the resident portal, by mail, or in
                      person at the HOA office.
                    </div>
                  </div>
                </div>
                <div class="accordion-item bg-transparent">
                  <h2 class="accordion-header">
                    <button
                      class="accordion-button bg-transparent collapsed rounded shadow-none p-3"
                      type="button"
                      data-bs-toggle="collapse"
                      data-bs-target="#payments-collapseTwo"
                      aria-expanded="false"
                      aria-controls="payments-collapseTwo"
                    >
                      Are payment plans available?
                    </button>
                  </h2>
                  <div
                    id="payments-collapseTwo"
                    class="accordion-collapse collapse"
                    data-bs-parent="#accordionPayments"
                  >
                    <div class="accordion-body p-3 pt-0">
                      Yes, payment plans can be arranged by contacting the HOA office directly.
                    </div>
                  </div>
                </div>
                <div class="accordion-item bg-transparent">
                  <h2 class="accordion-header">
                    <button
                      class="accordion-button bg-transparent collapsed rounded shadow-none p-3"
                      type="button"
                      data-bs-toggle="collapse"
                      data-bs-target="#payments-collapseThree"
                      aria-expanded="false"
                      aria-controls="payments-collapseThree"
                    >
                      What happens if I miss a payment?
                    </button>
                  </h2>
                  <div
                    id="payments-collapseThree"
                    class="accordion-collapse collapse"
                    data-bs-parent="#accordionPayments"
                  >
                    <div class="accordion-body p-3 pt-0">
                      Late payments may incur a fee. Please contact the HOA if you anticipate
                      difficulty making a payment.
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- Policies Tab -->
            <div class="tab-pane fade" id="policies" role="tabpanel" aria-labelledby="policies-tab">
              <div
                class="accordion accordion-flush"
                id="accordionPolicies"
                role="tablist"
                aria-multiselectable="true"
              >
                <div class="accordion-item bg-transparent">
                  <h2 class="accordion-header">
                    <button
                      class="accordion-button bg-transparent collapsed rounded shadow-none p-3"
                      type="button"
                      data-bs-toggle="collapse"
                      data-bs-target="#policies-collapseOne"
                      aria-expanded="false"
                      aria-controls="policies-collapseOne"
                    >
                      What are the community’s pet policies?
                    </button>
                  </h2>
                  <div
                    id="policies-collapseOne"
                    class="accordion-collapse collapse"
                    data-bs-parent="#accordionPolicies"
                  >
                    <div class="accordion-body p-3 pt-0">
                      Pets are welcome, but must be leashed in common areas. Please clean up after
                      your pets.
                    </div>
                  </div>
                </div>
                <div class="accordion-item bg-transparent">
                  <h2 class="accordion-header">
                    <button
                      class="accordion-button bg-transparent collapsed rounded shadow-none p-3"
                      type="button"
                      data-bs-toggle="collapse"
                      data-bs-target="#policies-collapseTwo"
                      aria-expanded="false"
                      aria-controls="policies-collapseTwo"
                    >
                      Are there restrictions on exterior home modifications?
                    </button>
                  </h2>
                  <div
                    id="policies-collapseTwo"
                    class="accordion-collapse collapse"
                    data-bs-parent="#accordionPolicies"
                  >
                    <div class="accordion-body p-3 pt-0">
                      Yes, all exterior modifications must be approved by the HOA Architectural
                      Review Committee.
                    </div>
                  </div>
                </div>
                <div class="accordion-item bg-transparent">
                  <h2 class="accordion-header">
                    <button
                      class="accordion-button bg-transparent collapsed rounded shadow-none p-3"
                      type="button"
                      data-bs-toggle="collapse"
                      data-bs-target="#policies-collapseThree"
                      aria-expanded="false"
                      aria-controls="policies-collapseThree"
                    >
                      What is the noise policy in the community?
                    </button>
                  </h2>
                  <div
                    id="policies-collapseThree"
                    class="accordion-collapse collapse"
                    data-bs-parent="#accordionPolicies"
                  >
                    <div class="accordion-body p-3 pt-0">
                      Quiet hours are from 10 PM to 7 AM. Please be considerate of your neighbors at
                      all times.
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- End tab-content -->
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Card -->
  <section class="bg-body pb-5">
    <div class="container">
      <div class="row">
        <div
          class="col-md-8 offset-md-2 col-lg-6 offset-lg-3"
          data-aos="fade-up"
          data-aos-duration="1000"
        >
          <div class="card bg-primary-pale border">
            <div class="card-body">
              <h5
                class="card-title fs-5"
                data-aos="fade-up"
                data-aos-delay="100"
                data-aos-duration="1400"
              >
                Didn't find your question?
              </h5>
              <p
                class="card-text mb-4"
                data-aos="fade-up"
                data-aos-delay="200"
                data-aos-duration="1400"
              >
                We're here to help! Reach out to us directly using the contact details below.
              </p>
              <div class="row g-3">
                <div
                  class="col-md-6"
                  data-aos="fade-up"
                  data-aos-delay="300"
                  data-aos-duration="1200"
                >
                  <div class="d-flex align-items-start">
                    <i class="ri-map-pin-line me-3 fs-4 text-primary"></i>
                    <span>
                      <strong>Address:</strong><br />
                      123 Longhorn Heights, Austin, TX
                    </span>
                  </div>
                </div>
                <div
                  class="col-md-6"
                  data-aos="fade-up"
                  data-aos-delay="400"
                  data-aos-duration="1200"
                >
                  <div class="d-flex align-items-start">
                    <i class="ri-phone-line me-3 fs-4 text-primary"></i>
                    <span>
                      <strong>Phone:</strong><br />
                      +1 (234) 567-8901
                    </span>
                  </div>
                </div>
                <div
                  class="col-md-6"
                  data-aos="fade-up"
                  data-aos-delay="500"
                  data-aos-duration="1200"
                >
                  <div class="d-flex align-items-start">
                    <i class="ri-mail-line me-3 fs-4 text-primary"></i>
                    <span>
                      <strong>Email:</strong><br />
                      hello@email.com
                    </span>
                  </div>
                </div>
                <div
                  class="col-md-6"
                  data-aos="fade-up"
                  data-aos-delay="600"
                  data-aos-duration="1200"
                >
                  <div class="d-flex align-items-start">
                    <i class="ri-time-line me-3 fs-4 text-primary"></i>
                    <span>
                      <strong>Office Hours:</strong><br />
                      Mon–Fri: 9:00 AM – 5:00 PM
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="text-bg-primary py-5">
    <div class="container text-center">
      <!-- Heading and Intro -->
      <h2 class="fs-1 mb-2" data-aos="fade-up" data-aos-duration="1400">Stay Connected</h2>
      <p class="mb-4" data-aos="fade-up" data-aos-delay="100" data-aos-duration="1400">
        Sign up for updates about community news, upcoming events, and important HOA announcements.
      </p>
      <div class="row">
        <div class="col-lg-8 offset-lg-2">
          <!-- Form -->
          <form
            class="row g-4 justify-content-center"
            data-aos="fade-up"
            data-aos-delay="200"
            data-aos-duration="1400"
          >
            <!-- Name Field -->
            <div class="col-12 col-md-6">
              <input
                type="text"
                class="form-control form-control-lg"
                placeholder="Your Name"
                required
              />
            </div>
            <!-- Phone Field -->
            <div class="col-12 col-md-6">
              <input
                type="tel"
                class="form-control form-control-lg"
                placeholder="Phone Number"
                pattern="[0-9\-+()\s]{7,15}"
                required
              />
            </div>
            <!-- Email Field -->
            <div class="col-12">
              <input
                type="email"
                class="form-control form-control-lg"
                placeholder="Email Address"
                required
              />
            </div>
            <!-- Submit Button -->
            <div class="col-12 col-md-auto">
              <button type="submit" class="btn btn-lg btn-dark w-100">
                Subscribe<i class="ri-arrow-right-line ms-2"></i>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>
