---
import Layout from './layout.astro'
import { getAssetPrefix } from '../../../../utils/path.js'
---

<Layout
  title="Gallery"
  description="A clean, responsive theme designed to help homeowners associations build a strong online presence."
>
  <!-- Hero Section -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/theme-images/hero-1.jpg')}'); background-size: cover; background-position: center; height: 400px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
    <!-- Content -->
    <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <h1 class="display-4 fw-semibold mb-2" data-aos="fade-up" data-aos-duration="1000">
            Gallery
          </h1>
          <p class="fs-4 mb-0" data-aos="fade-up" data-aos-delay="200" data-aos-duration="1000">
            A glimpse into life at Longhorn Heights â€” explore moments, milestones, and memories
            captured throughout our vibrant community.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Gallery Section -->
  <section class="bg-body py-5">
    <div class="container">
      <h2 class="fs-1 text-center mb-4" data-aos="fade-up" data-aos-duration="800">
        Explore Our Gallery
      </h2>
      <div class="row g-3 g-md-4">
        <!-- Gallery Image 1 -->
        <div class="col-6 col-lg-3" data-aos="zoom-in" data-aos-delay="100" data-aos-duration="800">
          <a
            href="#"
            data-bs-toggle="modal"
            data-bs-target="#imageModal"
            data-img-src={getAssetPrefix('/assets/img/theme-images/img-2.jpg')}
          >
            <figure class="img-scale rounded-4 mb-0">
              <img
                src={getAssetPrefix('/assets/img/theme-images/img-2.jpg')}
                class="img-fluid"
                alt="Gallery Image"
              />
            </figure>
          </a>
        </div>
        <!-- Gallery Image 2 -->
