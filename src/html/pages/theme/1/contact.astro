---
import Layout from './layout.astro'
import { getAssetPrefix } from '../../../../utils/path.js'
---

<Layout
  title="Contact"
  description="A clean, responsive theme designed to help homeowners associations build a strong online presence."
>
  <!-- Hero Section -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/theme-images/hero-1.jpg')}'); background-size: cover; background-position: center; height: 400px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
    <!-- Content -->
    <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <h1 class="display-4 fw-semibold mb-2" data-aos="fade-up" data-aos-duration="1600">
            Get in Touch
          </h1>
          <p class="fs-4 mb-0" data-aos="fade-up" data-aos-delay="200" data-aos-duration="1600">
            We'd love to hear from you! Whether you have questions about us, or just want to say
            hello — we're here to help and happy to chat.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form -->
  <section class="bg-body py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-6" data-aos="fade-right" data-aos-duration="1000">
          <h1 class="fs-1 mb-2" data-aos="fade-up" data-aos-delay="100" data-aos-duration="1400">
            Contact Us
          </h1>
          <p class="lead mb-4" data-aos="fade-up" data-aos-delay="200" data-aos-duration="1400">
            Whether you have a question, need support, or just want to say hello — we're here for
            you.
          </p>
          <div
            class="d-flex align-items-start gap-3 mb-3"
            data-aos="fade-up"
            data-aos-delay="300"
            data-aos-duration="1200"
          >
            <i class="ri-phone-fill fs-4 text-primary"></i>
            <div>
              <h6 class="mb-1">Phone</h6>
              <p class="mb-0 text-muted">
                <a href="tel:+12345678901" class="text-muted text-decoration-none"
                  >+1 (234) 567-8901</a
                >
              </p>
            </div>
          </div>
          <div
            class="d-flex align-items-start gap-3 mb-3"
            data-aos="fade-up"
            data-aos-delay="400"
            data-aos-duration="1200"
          >
            <i class="ri-mail-fill fs-4 text-primary"></i>
            <div>
              <h6 class="mb-1">Email</h6>
              <p class="mb-0 text-muted">
                <a href="mailto:hello@email.com" class="text-muted text-decoration-none"
                  >hello@email.com</a
                >
              </p>
            </div>
          </div>
          <div
            class="d-flex align-items-start gap-3"
            data-aos="fade-up"
            data-aos-delay="500"
            data-aos-duration="1200"
          >
            <i class="ri-map-pin-fill fs-4 text-primary"></i>
            <div>
              <h6 class="mb-1">Address</h6>
              <p class="mb-0 text-muted">
                123 Longhorn Heights, <br />Austin, TX
              </p>
            </div>
          </div>
        </div>
        <div
          class="col-md-6 mt-auto pt-4 pt-md-0"
          data-aos="fade-left"
          data-aos-delay="200"
          data-aos-duration="1600"
        >
          <form data-aos="fade-up" data-aos-delay="400" data-aos-duration="1400">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input
                type="text"
                class="form-control form-control-lg"
                id="name"
                placeholder="John Doe"
              />
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control form-control-lg"
                id="email"
                placeholder="you@example.com"
              />
            </div>
            <div class="mb-3">
              <label for="message" class="form-label">Message</label>
              <textarea
                class="form-control form-control-lg"
                id="message"
                rows="3"
                placeholder="Write your message here..."></textarea>
            </div>
            <div class="d-grid">
              <button type="submit" class="btn btn-lg btn-primary">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="bg-body pb-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 offset-lg-2">
          <h2 class="fs-1 text-center mb-2" data-aos="fade-up" data-aos-duration="1400">FAQs</h2>
          <p
            class="lead text-center mb-4"
            data-aos="fade-up"
            data-aos-delay="100"
            data-aos-duration="1400"
          >
            Answers to some of the most common questions we receive about our association.
          </p>
          <!-- Nav -->
          <ul
            class="nav nav-tabs justify-content-center flex-wrap gap-2 mb-3"
            data-aos="fade-up"
            data-aos-delay="200"
            data-aos-duration="1400"
          >
            <li class="nav-item">
              <a class="nav-link text-body active" aria-current="page" href="#">General</a>
            </li>
            <li class="nav-item"><a class="nav-link text-body" href="#">Payments</a></li>
            <li class="nav-item"><a class="nav-link text-body" href="#">Policies</a></li>
          </ul>
          <!-- Accordion -->
          <div
            class="accordion accordion-flush"
            id="accordionFAQs"
            role="tablist"
            aria-multiselectable="true"
            data-aos="fade-up"
            data-aos-delay="300"
            data-aos-duration="1400"
          >
            <div
              class="accordion-item bg-transparent"
              data-aos="fade-up"
              data-aos-delay="400"
              data-aos-duration="1400"
            >
              <h2 class="accordion-header">
                <button
                  class="accordion-button bg-transparent collapsed rounded shadow-none p-3"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#flush-collapseOne"
                  aria-expanded="false"
                  aria-controls="flush-collapseOne"
                >
                  When are homeowners association meetings held?
                </button>
              </h2>
              <div
                id="flush-collapseOne"
                class="accordion-collapse collapse"
                data-bs-parent="#accordionFAQs"
              >
                <div class="accordion-body p-3 pt-0">
                  HOA meetings are held quarterly at the clubhouse. Dates are posted on the
                  community website and emailed to residents in advance.
                </div>
              </div>
            </div>
            <div
              class="accordion-item bg-transparent"
              data-aos="fade-up"
              data-aos-delay="500"
              data-aos-duration="1400"
            >
              <h2 class="accordion-header">
                <button
                  class="accordion-button bg-transparent collapsed rounded shadow-none p-3"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#flush-collapseTwo"
                  aria-expanded="false"
                  aria-controls="flush-collapseTwo"
                >
                  Who do I contact for maintenance issues in common areas?
                </button>
              </h2>
              <div
                id="flush-collapseTwo"
                class="accordion-collapse collapse"
                data-bs-parent="#accordionFAQs"
              >
                <div class="accordion-body p-3 pt-0">
                  Please report any maintenance concerns through the HOA contact form or by calling
                  the property management company directly.
                </div>
              </div>
            </div>
            <div
              class="accordion-item bg-transparent"
              data-aos="fade-up"
              data-aos-delay="600"
              data-aos-duration="1400"
            >
              <h2 class="accordion-header">
                <button
                  class="accordion-button bg-transparent collapsed rounded shadow-none p-3"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#flush-collapseThree"
                  aria-expanded="false"
                  aria-controls="flush-collapseThree"
                >
                  Are there rules about parking or street parking?
                </button>
              </h2>
              <div
                id="flush-collapseThree"
                class="accordion-collapse collapse"
                data-bs-parent="#accordionFAQs"
              >
                <div class="accordion-body p-3 pt-0">
                  Yes. Overnight street parking is limited in certain areas. Residents are
                  encouraged to use driveways and garages when possible.
                </div>
              </div>
            </div>
            <div
              class="accordion-item bg-transparent"
              data-aos="fade-up"
              data-aos-delay="700"
              data-aos-duration="1400"
            >
              <h2 class="accordion-header">
                <button
                  class="accordion-button bg-transparent collapsed rounded shadow-none p-3"
                  type="button"
                  data-bs-toggle="collapse"
                  data-bs-target="#flush-collapseFour"
                  aria-expanded="false"
                  aria-controls="flush-collapseFour"
                >
                  How do I reserve the clubhouse for a private event?
                </button>
              </h2>
              <div
                id="flush-collapseFour"
                class="accordion-collapse collapse"
                data-bs-parent="#accordionFAQs"
              >
                <div class="accordion-body p-3 pt-0">
                  You can request a reservation through the resident portal or by contacting the HOA
                  office. A deposit and cleaning fee may apply.
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="bg-body">
    <div class="container-fluid px-0" data-aos="fade-up" data-aos-duration="1000">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6891.918314633661!2d-97.74639088460376!3d30.26674489620698!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8644b599a0cc032f%3A0x5d9b464bd469d57a!2sAustin%2C%20TX%2C%20USA!5e0!3m2!1sen!2sin!4v1748249504404!5m2!1sen!2sin"
        width="100%"
        height="400"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="text-bg-primary py-5">
    <div class="container text-center">
      <!-- Heading and Intro -->
      <h2 class="fs-1 mb-2" data-aos="fade-up" data-aos-duration="800">Stay Connected</h2>
      <p class="mb-4" data-aos="fade-up" data-aos-delay="100" data-aos-duration="800">
        Sign up for updates about community news, upcoming events, and important HOA announcements.
      </p>
      <div class="row">
        <div class="col-lg-8 offset-lg-2">
          <!-- Form -->
          <form
            class="row g-4 justify-content-center"
            data-aos="fade-up"
            data-aos-delay="200"
            data-aos-duration="1000"
          >
            <!-- Name Field -->
            <div class="col-12 col-md-6">
              <input
                type="text"
                class="form-control form-control-lg"
                placeholder="Your Name"
                required
              />
            </div>
            <!-- Phone Field -->
            <div class="col-12 col-md-6">
              <input
                type="tel"
                class="form-control form-control-lg"
                placeholder="Phone Number"
                pattern="[0-9\-+()\s]{7,15}"
                required
              />
            </div>
            <!-- Email Field -->
            <div class="col-12">
              <input
                type="email"
                class="form-control form-control-lg"
                placeholder="Email Address"
                required
              />
            </div>
            <!-- Submit Button -->
            <div class="col-12 col-md-auto">
              <button type="submit" class="btn btn-lg btn-dark w-100">
                Subscribe<i class="ri-arrow-right-line ms-2"></i>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>
