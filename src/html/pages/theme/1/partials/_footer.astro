---
import { getPathPrefix } from '../../../../../utils/path.js'
import Logo from './_topbar/_logo.astro'
---

<!-- Footer -->
<footer class="bg-body">
  <div class="container">
    <div
      class="row row-cols-1 row-cols-sm-2 row-cols-lg-5 px-3 px-lg-5 pt-5 pb-4"
      data-aos="slide-up"
      data-aos-duration="800"
    >
      <div class="col mb-3" data-aos="slide-up" data-aos-delay="100" data-aos-duration="800">
        <a
          href="/"
          class="d-inline-flex align-items-center text-decoration-none mb-3"
          aria-label="Your Company Logo"
        >
          <Logo />
        </a>
        <p class="text-body-secondary mb-3">
          Stay connected with our community—subscribe to updates and never miss important news or
          events!
        </p>
        <a href={getPathPrefix('/theme/1/contact')} class="btn btn-lg btn-primary">Get in touch</a>
      </div>

      <div class="col mb-3"></div>

      <div class="col mb-3" data-aos="slide-up" data-aos-delay="200" data-aos-duration="800">
        <nav aria-label="Quick Links">
          <h5 class="mb-3">Quick Links</h5>
          <ul class="nav flex-column">
            <li class="nav-item mb-2">
              <a href={getPathPrefix('/theme/1/home')} class="nav-link p-0 text-body-secondary"
                >Home</a
              >
            </li>
            <li class="nav-item mb-2">
              <a href={getPathPrefix('/theme/1/about')} class="nav-link p-0 text-body-secondary"
                >About</a
              >
            </li>
            <li class="nav-item mb-2">
              <a href={getPathPrefix('/theme/1/news')} class="nav-link p-0 text-body-secondary"
                >News</a
              >
            </li>
            <li class="nav-item mb-2">
              <a href={getPathPrefix('/theme/1/faq')} class="nav-link p-0 text-body-secondary"
                >FAQs</a
              >
            </li>
            <li class="nav-item mb-2">
              <a href={getPathPrefix('/theme/1/contact')} class="nav-link p-0 text-body-secondary"
                >Contact</a
              >
            </li>
          </ul>
        </nav>
      </div>

      <div class="col mb-3" data-aos="slide-up" data-aos-delay="300" data-aos-duration="800">
        <nav aria-label="Legal">
          <h5 class="mb-3">Legal</h5>
          <ul class="nav flex-column">
            <li class="nav-item mb-2">
              <a href="#" class="nav-link p-0 text-body-secondary">Terms of Use</a>
            </li>
            <li class="nav-item mb-2">
              <a href="#" class="nav-link p-0 text-body-secondary">Privacy Policy</a>
            </li>
            <li class="nav-item mb-2">
              <a href="#" class="nav-link p-0 text-body-secondary">Cookies Policy</a>
            </li>
          </ul>
        </nav>
      </div>

      <div class="col mb-3" data-aos="slide-up" data-aos-delay="400" data-aos-duration="800">
        <h5 class="mb-3">Contact</h5>
        <ul class="nav flex-column">
          <li class="nav-item mb-2 text-body-secondary">
            <i class="ri-phone-fill text-primary me-2"></i>
            <a href="tel:+12345678901" class="text-body-secondary text-decoration-none text-break"
              >+1 (234) 567-8901</a
            >
          </li>
          <li class="nav-item mb-2 text-body-secondary">
            <i class="ri-mail-fill text-primary me-2"></i>
            <a
              href="mailto:hello@email.com"
              class="text-body-secondary text-decoration-none text-break">hello@email.com</a
            >
          </li>
          <li class="nav-item mb-2 text-body-secondary">
            <address class="text-body-secondary">
              <i class="ri-map-pin-fill text-primary me-2"></i>
              123 Longhorn Heights, Austin, TX
            </address>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div
    class="text-center text-bg-dark py-4"
    data-aos="slide-up"
    data-aos-delay="500"
    data-aos-duration="800"
  >
    <p class="mb-0">© 2025 Company, Inc. All rights reserved.</p>
  </div>
</footer>
