---
import Layout from './layout.astro'
import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout
  title="Events"
  description="A clean, responsive theme designed to help homeowners associations build a strong online presence."
>
  <!-- Hero Section -->
  <section
    class="position-relative text-light text-center"
    style={`background-image: url('${getAssetPrefix('/assets/img/theme-images/hero-1.jpg')}'); background-size: cover; background-position: center; height: 400px;`}
  >
    <!-- Overlay -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark opacity-50"></div>
    <!-- Content -->
    <div class="position-relative d-flex flex-column justify-content-center h-100 px-3">
      <div class="row">
        <div class="col-lg-6 offset-lg-3">
          <h1 class="display-4 fw-semibold mb-2" data-aos="fade-up" data-aos-duration="1600">
            Events
          </h1>
          <p class="fs-4 mb-0" data-aos="fade-up" data-aos-delay="200" data-aos-duration="1600">
            Stay connected with neighborhood events, from seasonal festivals to board meetings and
            community clean-up days. There's always something happening!
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Upcoming Events Section -->
  <section class="bg-body py-5">
    <div class="container">
      <h2 class="fs-1 text-center mb-4" data-aos="fade-up" data-aos-duration="1400">
        Upcoming Events
      </h2>
      <div class="row g-4">
        <!-- Event 1 -->
        <div class="col-lg-4" data-aos="flip-up" data-aos-delay="100" data-aos-duration="1400">
          <div class="card card-lift h-100 border">
            <div class="card-body">
              <div class="d-flex align-items-center mb-3">
                <i class="ri-leaf-line display-5 text-primary me-3"></i>
                <div>
                  <h5 class="card-title fs-5 mb-0">Spring Clean-Up Day</h5>
                  <p class="text-muted mb-0">Saturday, June 1 · 9:00 AM</p>
                </div>
              </div>
              <p class="card-text">
                Join neighbors to help beautify our green spaces. Supplies will be provided. Meet at
                the clubhouse.
              </p>
            </div>
          </div>
        </div>

        <!-- Event 2 -->
        <div class="col-lg-4" data-aos="flip-up" data-aos-delay="200" data-aos-duration="1400">
          <div class="card card-lift h-100 border">
            <div class="card-body">
              <div class="d-flex align-items-center mb-3">
                <i class="ri-discuss-line display-5 text-primary me-3"></i>
                <div>
                  <h5 class="card-title fs-5 mb-0">Board Meeting</h5>
                  <p class="text-muted mb-0">Tuesday, June 18 · 6:00 PM</p>
                </div>
              </div>
              <p class="card-text">
                Open to all residents. Come share your thoughts or simply listen in on the latest
                updates and plans.
              </p>
            </div>
          </div>
        </div>

        <!-- Event 3 -->
        <div class="col-lg-4" data-aos="flip-up" data-aos-delay="300" data-aos-duration="1400">
          <div class="card card-lift h-100 border">
            <div class="card-body">
              <div class="d-flex align-items-center mb-3">
                <i class="ri-sun-line display-5 text-primary me-3"></i>
                <div>
                  <h5 class="card-title fs-5 mb-0">Summer Social</h5>
                  <p class="text-muted mb-0">Saturday, July 20 · 4:00 PM</p>
                </div>
              </div>
              <p class="card-text">
                Food, music, and games for all ages at the community park. Bring your lawn chairs
                and enjoy the fun!
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Gallery Section -->
  <section class="bg-secondary-subtle py-5">
    <div class="container">
      <h2 class="fs-1 text-center mb-4" data-aos="fade-up" data-aos-duration="1400">
        Events Gallery
      </h2>
      <div class="row g-3 g-md-4 mb-4">
        <!-- Gallery Image 1 -->
        <div
          class="col-6 col-lg-3"
          data-aos="zoom-in"
          data-aos-delay="100"
          data-aos-duration="1400"
        >
          <figure class="img-scale rounded-4 mb-0">
            <img
              src={getAssetPrefix('/assets/img/theme-images/img-2.jpg')}
              class="img-fluid"
              alt="Gallery Image"
            />
          </figure>
        </div>
        <!-- Gallery Image 2 -->
        <div
          class="col-6 col-lg-3"
          data-aos="zoom-in"
          data-aos-delay="200"
          data-aos-duration="1400"
        >
          <figure class="img-scale rounded-4 mb-0">
            <img
              src={getAssetPrefix('/assets/img/theme-images/img-1.jpg')}
              class="img-fluid"
              alt="Gallery Image"
            />
          </figure>
        </div>
        <!-- Gallery Image 3 -->
        <div
          class="col-6 col-lg-3"
          data-aos="zoom-in"
          data-aos-delay="300"
          data-aos-duration="1400"
        >
          <figure class="img-scale rounded-4 mb-0">
            <img
              src={getAssetPrefix('/assets/img/theme-images/img-3.jpg')}
              class="img-fluid"
              alt="Gallery Image"
            />
          </figure>
        </div>
        <!-- Gallery Image 4 -->
        <div
          class="col-6 col-lg-3"
          data-aos="zoom-in"
          data-aos-delay="400"
          data-aos-duration="1400"
        >
          <figure class="img-scale rounded-4 mb-0">
            <img
              src={getAssetPrefix('/assets/img/theme-images/img-4.jpg')}
              class="img-fluid"
              alt="Gallery Image"
            />
          </figure>
        </div>
      </div>
      <div class="text-center text-md-end" data-aos="fade-left" data-aos-duration="1400">
        <a href={getPathPrefix('/theme/1/gallery')} class="btn btn-lg btn-outline-primary"
          >View Full Gallery<i class="ri-arrow-right-line ms-2"></i></a
        >
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="text-bg-primary py-5">
    <div class="container text-center">
      <!-- Heading and Intro -->
      <h2 class="fs-1 mb-2" data-aos="fade-up" data-aos-duration="1400">Stay Connected</h2>
      <p class="mb-4" data-aos="fade-up" data-aos-delay="100" data-aos-duration="1400">
        Sign up for updates about community news, upcoming events, and important HOA announcements.
      </p>
      <div class="row">
        <div class="col-lg-8 offset-lg-2">
          <!-- Form -->
          <form
            class="row g-4 justify-content-center"
            data-aos="fade-up"
            data-aos-delay="200"
            data-aos-duration="1400"
          >
            <!-- Name Field -->
            <div class="col-12 col-md-6">
              <input
                type="text"
                class="form-control form-control-lg"
                placeholder="Your Name"
                required
              />
            </div>
            <!-- Phone Field -->
            <div class="col-12 col-md-6">
              <input
                type="tel"
                class="form-control form-control-lg"
                placeholder="Phone Number"
                pattern="[0-9\-+()\s]{7,15}"
                required
              />
            </div>
            <!-- Email Field -->
            <div class="col-12">
              <input
                type="email"
                class="form-control form-control-lg"
                placeholder="Email Address"
                required
              />
            </div>
            <!-- Submit Button -->
            <div class="col-12 col-md-auto">
              <button type="submit" class="btn btn-lg btn-dark w-100">
                Subscribe<i class="ri-arrow-right-line ms-2"></i>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</Layout>
