---
import Layout from './layout.astro'
// import { getAssetPrefix, getPathPrefix } from '../../../../utils/path.js'
---

<Layout title="Templates" description="An easy website builder for pet breeders.">
  <!-- Heading -->
  <section
    class="py-5 d-flex align-items-center position-relative"
    style="
      background-image: url('https://cdn.breederspot.com/bspot/cms/page/157/rsz_15634900_5660676.jpg');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
      min-height: 280px;
    "
  >
    <!-- Overlay -->
    <div style="position: absolute; inset: 0; background: rgba(50, 50, 50, 0.5); z-index: 1;"></div>

    <div class="row position-relative" style="z-index: 2; width: 100%;">
      <div class="col-lg-8 offset-lg-2">
        <div class="container text-center">
          <h1 class="display-5 text-light fw-bold">Templates</h1>
        </div>
      </div>
    </div>
  </section>

  <!-- Content -->
  <section class="bg-body py-5">
    <div class="container">
      <p class="text-muted mb-0">Coming soon.</p>
    </div>
  </section>
</Layout>
